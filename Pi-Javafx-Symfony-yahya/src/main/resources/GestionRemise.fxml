<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>

<AnchorPane
        fx:id="root"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controller.GestionRemise"
        prefHeight="670.0" prefWidth="950.0"
        style="-fx-background-color: linear-gradient(to bottom, #030307, #131022);">

    <children>
        <!-- ðŸŒŸ Barre latÃ©rale modernisÃ©e -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="220.0"
              style="-fx-background-color: linear-gradient(to bottom, #131022, #1A172A);
                     -fx-padding: 15px;
                     -fx-border-radius: 15 0 0 15;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0, 3, 3);">
            <children>
                <!-- Logo -->
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <Label text="Gestion Remises"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 10px; -fx-alignment: center;"/>

                <!-- Boutons de navigation -->
                <Button text="ðŸ  Accueil" onAction="#goToAcceuil"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="âž• Ajouter Remise"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="ðŸ“‹ Liste des Remises" onAction="#goToListeRemise"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
            </children>
        </VBox>

        <!-- ðŸŒŸ Contenu principal -->
        <VBox layoutX="250.0" layoutY="20.0" prefWidth="680.0"
              style="-fx-alignment: center; -fx-padding: 20px;">
            <children>

                <!-- ðŸ”µ Titre avec ombre -->
                <Label text="âž• Ajouter une Remise"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.8), 10, 0, 2, 2);"/>

                <!-- ðŸ“œ Formulaire avec effet de verre -->
                <GridPane hgap="12" vgap="12"
                          style="-fx-background-color: rgba(255, 255, 255, 0.1);
                                 -fx-padding: 20px;
                                 -fx-border-radius: 12px;
                                 -fx-border-color: white;
                                 -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
                    <children>
                        <Label text="ðŸ· Code Promo :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="codePromo" promptText="Code Promo"
                                   style="-fx-border-radius: 10px;
                                          -fx-background-radius: 10px;
                                          -fx-padding: 10px;
                                          -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="ðŸ“ Description :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="description" promptText="Description"
                                   style="-fx-border-radius: 10px;
                                          -fx-background-radius: 10px;
                                          -fx-padding: 10px;
                                          -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="ðŸ’² Pourcentage de Remise :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="pourcentageRemise" promptText="Pourcentage de Remise"
                                   style="-fx-border-radius: 10px;
                                          -fx-background-radius: 10px;
                                          -fx-padding: 10px;
                                          -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="ðŸ“… Date d'Expiration :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <DatePicker fx:id="dateExpiration"
                                    style="-fx-border-radius: 10px;
                                           -fx-background-radius: 10px;
                                           -fx-padding: 10px;
                                           -fx-border-color: white;
                                           -fx-background-color: rgba(255, 255, 255, 0.3);"
                                    GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </children>
                </GridPane>

                <!-- âœ… Bouton de validation avec effet d'ombre -->
                <Button text="âœ” Ajouter la Remise"
                        style="-fx-background-color: #9b59b6;
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-border-radius: 12px;
                               -fx-padding: 10px;
                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"
                        onAction="#addRemise"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
            </children>
        </VBox>
    </children>
</AnchorPane>