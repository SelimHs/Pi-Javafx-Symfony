<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom, #a868a0, #34495e);"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ModifierEventController">

    <!-- 🟣 Conteneur Principal -->
    <VBox spacing="20" alignment="CENTER"
          style="-fx-padding: 30px; -fx-background-radius: 15px;">

        <!-- 🏷️ Titre -->
        <Label text="✏ Modifier un Événement"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;
                      -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.3), 10, 0, 2, 2);"/>

        <!-- 📋 Formulaire -->
        <GridPane hgap="12" vgap="15"
                  style="-fx-background-color: rgba(255, 255, 255, 0.15);
                         -fx-padding: 20px; -fx-border-radius: 12px;
                         -fx-border-color: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">

            <Label text="📌 Nom de l'événement :" textFill="white" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nomEventField" promptText="Nom de l'événement"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="📅 Date :" textFill="white" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="dateField" promptText="Date de l'événement"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="💰 Prix :" textFill="white" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="prixField" promptText="Prix en DT"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="👥 Nombre max de visiteurs :" textFill="white" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="nbrVisiteursField" promptText="Nombre max de visiteurs"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="📍 Lieu :" textFill="white" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="nomEspaceField" promptText="Lieu de l'événement"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="📝 Détails :" textFill="white" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <TextArea fx:id="detailsField" promptText="Description de l'événement"
                      style="-fx-background-color: rgba(255, 255, 255, 0.3);
                             -fx-border-radius: 10px; -fx-padding: 10px;
                             -fx-border-color: white; -fx-text-fill: white;"
                      GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- 🟢🔴 Boutons d'action -->
        <HBox spacing="15">
            <Button fx:id="saveEvent" text="💾 Modifier" onAction="#saveEvent"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-border-radius: 12px; -fx-padding: 12px 20px;
                           -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"/>

            <Button fx:id="cancelEvent" text="❌ Annuler"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-border-radius: 12px; -fx-padding: 12px 20px;
                           -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"/>
        </HBox>
    </VBox>
</AnchorPane>
