{% extends 'base.html.twig' %}

{% block title %}Validation des Admins{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Admins en attente de validation</h1>

    {% if pendingAdmins is empty %}
        <div class="alert alert-info text-center">Aucun admin en attente.</div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for admin in pendingAdmins %}
                        <tr>
                            <td>{{ admin.nom }}</td>
                            <td>{{ admin.prenom }}</td>
                            <td>{{ admin.email }}</td>
                            <td>
                                <form method="post" action="{{ path('admin_user_accept', {'id': admin.id}) }}">
                                    <button type="submit" class="btn btn-success btn-sm">
                                        ✔️ Accepter
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
