{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">Liste des utilisateurs</h1>

    <a href="{{ path('admin_user_new') }}" class="btn btn-success mb-4">➕ Ajouter un utilisateur</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Rôle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.numeroTelephone }}</td>
                <td>{{ user.type }}</td>
                <td>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">👁️ Voir</a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">✏️ Modifier</a>
                    {{ include('admin_user/_delete_form.html.twig', {'user': user}) }}
                </td>
            </tr>
        {% else %}
            <tr><td colspan="6" class="text-center">Aucun utilisateur trouvé.</td></tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
