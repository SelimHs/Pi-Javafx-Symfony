{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow rounded-4 border-0 mb-4">
                <div class="card-body">
                    <h2 class="mb-4">Liste des utilisateurs</h2>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Email</th>
                                    <th>Type</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.nom }} {{ user.prenom }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.type }}</td>
                                        <td>
                                            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body">
                    <h2 class="mb-4">Ajouter un utilisateur</h2>
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="row g-3">
                            {% for field in form %}
                                {% if field.vars.name != '_token' %}
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            {{ form_widget(field, {'attr': {'class': 'form-control', 'placeholder': ' '}}) }}
                                            {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_errors(field) }}
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i> Ajouter
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .card {
        border: none;
        background: #fff;
    }
    .form-control:focus {
        box-shadow: none;
        border-color: #0d6efd;
    }
    .btn-primary {
        background: #0d6efd;
        border: none;
    }
    .btn-primary:hover {
        background: #0b5ed7;
    }
</style>
{% endblock %}
