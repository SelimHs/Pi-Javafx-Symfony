<!-- ***** Header Area Start ***** -->
<header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="{{ path('app_home') }}" class="logo">
                        <h1>LAMMA</h1>
                    </a>
                    <!-- ***** Logo End ***** -->

                    <!-- ***** Menu Start ***** -->
                    <ul class="nav">
                        <li><a href="{{ path('app_home') }}" class="{% if app.request.get('_route') == 'app_home' %}active{% endif %}">Accueil</a></li>
                        <li><a href="{{ path('app_event_index') }}">Événements</a></li>
                        <li><a href="{{ path('app_espace_index') }}">Espaces</a></li>
                        <li><a href="{{ path('app_produit_index') }}">Produits</a></li>
                        <li><a href="#contact">Contact</a></li>

                        {% if app.user %}
                            <li><a href="{{ path('app_profile') }}"><i class="fas fa-user-circle"></i> Mon Profil</a></li>
                            <li><a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> Déconnexion</a></li>
                        {% else %}
                            <li><a href="{{ path('app_login') }}"><i class="fas fa-sign-in-alt"></i> Connexion</a></li>
                        {% endif %}
                    </ul>

                    <a class="menu-trigger">
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
</header>
<!-- ***** Header Area End ***** -->
