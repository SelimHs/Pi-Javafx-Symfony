{% extends 'base.html.twig' %}

{% block title %}Créer un Organisateur{% endblock %}

{% block body %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-5">
          <h2 class="mb-4 text-center">Nouveau Organisateur</h2>

          {{ form_start(form, {'attr': {'id': 'organisateurForm', 'novalidate': 'novalidate'}}) }}
            {{ form_row(form.nom_org) }}
            {{ form_row(form.prenom_org) }}
            {{ form_row(form.description_org) }}

            <div class="mb-3">
              {{ form_label(form.telef) }}
              <small class="text-muted d-block mb-1">Un code SMS vous sera envoyé</small>
              {{ form_widget(form.telef, {
                'attr': {
                  'class': 'form-control',
                  'pattern': '[0-9]{8}',
                  'title': 'Ex : 25123456'
                }
              }) }}
            </div>

            {{ form_row(form.espace) }}

            <div class="text-center mt-4">
              <button type="submit" class="btn btn-primary px-4">Enregistrer</button>
            </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal de vérification -->
<div class="modal fade" id="verificationModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content rounded-3">
      <div class="modal-header">
        <h5 class="modal-title">Vérification du code</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Un code a été envoyé à <strong id="phoneDisplay"></strong></p>
        <input type="text" id="smsCode" class="form-control" placeholder="123456" maxlength="6" />
        <div class="text-danger mt-2 small" id="smsError"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-success" id="verifyBtn">Valider</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('organisateurForm');
    const modal = new bootstrap.Modal(document.getElementById('verificationModal'));
    const verifyBtn = document.getElementById('verifyBtn');
    const smsError = document.getElementById('smsError');

    form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const response = await fetch(form.action, {
            method: 'POST',
            body: new FormData(form)
        });
        
        const result = await response.json();
        
        if (result.status === 'verification_required') {
            document.getElementById('phoneDisplay').textContent = result.phone;
            modal.show();
            
            // Envoi automatique du SMS
            const smsResponse = await fetch('{{ path("app_send_verification") }}', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ phone: result.phone })
            });
            
            const smsResult = await smsResponse.json();
            if (!smsResult.success) {
                smsError.textContent = smsResult.error || "Erreur d'envoi du SMS";
            }
        }
    });

    verifyBtn.addEventListener('click', async function() {
        const code = document.getElementById('smsCode').value.trim();
        smsError.textContent = '';
        
        if (code.length !== 6) {
            smsError.textContent = 'Le code doit contenir 6 chiffres';
            return;
        }
        
        const response = await fetch('{{ path("app_verify_code") }}', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ code: code })
        });
        
        const result = await response.json();
        
        if (result.success) {
            window.location.href = '{{ path("app_espace_index") }}';
        } else {
            smsError.textContent = result.error || "Code invalide";
        }
    });
});
</script>
{% endblock %}