{% extends 'base.html.twig' %}

{% block title %}Espace{% endblock %}

{% block body %}
<div class="page-heading header-text">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <span class="breadcrumb"><a href="{{ path('app_home') }}">Accueil</a> / Espaces</span>
        <h3>Détails de l’Espace</h3>
      </div>
    </div>
  </div>
</div>

<div class="section properties">
  <div class="container">
    <div class="row properties-box justify-content-center">
      <div class="col-lg-6 col-md-8 align-self-center mb-30 properties-items">
        <div class="item">
          <img src="{{ asset('uploads/' ~ espace.image) }}" alt="Image de l'espace">
          <span class="category">{{ espace.TypeEspace }}</span>
          <h6>{{ espace.prix }} Dt</h6>
          <h4>{{ espace.nomEspace }}</h4>
          <ul>
            <li>Adresse: <span>{{ espace.adresse }}</span></li>
            <li>Capacité: <span>{{ espace.capacite }}</span></li>
            <li>Disponibilité: <span>{{ espace.disponibilite }}</span></li>
          </ul>
          <div class="main-button d-flex justify-content-between">
            <a href="{{ path('app_espace_index') }}">Retour</a>
            <a href="{{ path('app_espace_edit', {'idEspace': espace.idEspace}) }}">Modifier</a>
          </div>
          <div class="mt-3">
            {{ include('espace/_delete_form.html.twig') }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
