{% extends 'baseBack.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
<div class="app-main__outer">
  <div class="app-main__inner">
    <!-- Titre -->
    <div class="app-page-title">
      <div class="page-title-wrapper">
        <div class="page-title-heading">
          <div class="page-title-icon">
            <i class="pe-7s-box2 icon-gradient bg-mean-fruit"></i>
          </div>
          <div>Gestion des Produits
            <div class="page-title-subheading">Liste des produits en stock avec image, prix et quantit√©s.</div>
          </div>
        </div>
        <div class="page-title-actions d-flex gap-3 flex-wrap align-items-center">
          
          <div class="input-group input-group-sm" style="width: 250px;">
            <label class="input-group-text" for="filterCategorie">Filtrer par cat√©gorie</label>
            <select id="filterCategorie" class="form-select">
              <option value="">Toutes les cat√©gories</option>
              <option value="√âlectronique">√âlectronique</option>
              <option value="ALIMENTAIRE">Alimentaire</option>
              <option value="AUTRES">Autres</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    {% if produits is empty %}
      <div class="alert alert-info text-center mt-4">Aucun produit trouv√©.</div>
    {% else %}
      <div class="row mt-4" id="produitCards">
        {% for produit in produits %}
          <div class="col-md-6 col-xl-4 produit-card"
               data-categorie="{{ produit.categorie|lower }}">
            <div class="card mb-4 shadow-sm">
              <div class="position-relative">
                <img src="{{ asset('uploads/' ~ (produit.imagePath ? produit.imagePath : 'placeholder.png')) }}"
                     class="card-img-top"
                     alt="{{ produit.nomProduit }}">
              </div>
              <div class="card-body">
                <h5 class="card-title text-uppercase">{{ produit.nomProduit }}</h5>
                <p class="card-text text-muted mb-1">
                  üí∞ <strong>{{ produit.prixProduit }} DT</strong><br>
                  üì¶ <strong>Quantit√© :</strong> {{ produit.quantite }}<br>
                  üè∑Ô∏è <strong>Cat√©gorie :</strong> {{ produit.categorie }}
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <a href="{{ path('dashboard_produit_show', {'idProduit': produit.idProduit}) }}"
                     class="btn btn-sm btn-outline-primary">
                    Voir d√©tails
                  </a>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const filter = document.getElementById('filterCategorie');
    const cards = document.querySelectorAll('.produit-card');

    filter.addEventListener('change', function () {
      const selected = this.value.toLowerCase().trim();
      cards.forEach(card => {
        const categorie = card.dataset.categorie.toLowerCase().trim();
        const show = !selected || categorie === selected;
        card.style.display = show ? '' : 'none';
      });
    });
  });
</script>

{% endblock %}
