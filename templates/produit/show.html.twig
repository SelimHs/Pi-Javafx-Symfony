{% extends 'base.html.twig' %}

{% block title %}D√©tails Produit{% endblock %}

{% block body %}
<style>
    .produit-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        padding: 30px;
        transition: transform 0.3s ease;
    }

    .produit-card:hover {
        transform: translateY(-5px);
    }

    .produit-image {
        max-width: 180px;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
        border: 3px solid #FF6B00;
    }

    .produit-info-label {
        font-weight: bold;
        color: #444;
    }

    .btn-orange,
    .btn-black,
    .btn-delete {
        padding: 10px 20px;
        border-radius: 30px;
        font-weight: 500;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
    }

    .btn-orange {
        background-color: #FF6B00;
        color: white;
    }

    .btn-orange:hover {
        background-color: #e55c00;
    }

    .btn-black {
        background-color: #000;
        color: white;
    }

    .btn-black:hover {
        background-color: #222;
    }

    .btn-delete {
        background-color: #dc3545;
        color: #fff;
    }

    .btn-delete:hover {
        background-color: #b02a37;
    }

    .btn-orange:hover i,
    .btn-black:hover i,
    .btn-delete:hover i {
        animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 25px;
    }

    @media (max-width: 768px) {
        .flex-md-row {
            flex-direction: column !important;
            align-items: center;
            text-align: center;
        }
        .text-md-start {
            text-align: center !important;
        }
        .action-buttons {
            justify-content: center;
        }
    }

    /* üåô Mode sombre */
    body.dark-mode .produit-card {
        background-color: #1e1e1e;
        color: #f1f1f1;
        border: 1px solid #333;
    }

    body.dark-mode .produit-info-label {
        color: #ffd700;
    }

    body.dark-mode .btn-black {
        background-color: #f1f1f1;
        color: #000;
    }

    body.dark-mode .btn-black:hover {
        background-color: #ccc;
    }

    body.dark-mode .text-muted {
        color: #aaa !important;
    }
</style>

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="produit-card d-flex flex-md-row align-items-center">
        <!-- üñºÔ∏è Image -->
        <div class="me-md-4 mb-4 mb-md-0">
            {% if produit.imagePath %}
                <img src="{{ asset('uploads/' ~ produit.imagePath) }}"
                     alt="{{ produit.nomProduit }}"
                     class="produit-image">
            {% else %}
                <div class="text-muted">Aucune image</div>
            {% endif %}
        </div>

        <!-- Infos Produit -->
        <div class="flex-grow-1 text-md-start">
            <h3 class="mb-3 text-uppercase">{{ produit.nomProduit }}</h3>

            <p><span class="produit-info-label">üí∞ Prix :</span> {{ produit.prixProduit }} DT</p>
            <p><span class="produit-info-label">üì¶ Quantit√© :</span> {{ produit.quantite }}</p>
            <p><span class="produit-info-label">üè∑Ô∏è Cat√©gorie :</span> {{ produit.categorie }}</p>
            <p><span class="produit-info-label">üìù Description :</span> {{ produit.description }}</p>
            <p><span class="produit-info-label">üè¢ Fournisseur :</span> {{ produit.fournisseur.nomFournisseur }}</p>
            <p><span class="produit-info-label">üìû T√©l√©phone :</span> {{ produit.fournisseur.telephone }}</p>

            <!-- üîò Actions -->
            <div class="action-buttons">
                <a href="{{ path('app_produit_index') }}" class="btn btn-black">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
