{% extends 'baseBack.html.twig' %}

{% block title %}Fournisseur Index{% endblock %}

{% block body %}
    <style>
        /* Reset and Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            color: #333;
        }

        /* Container */
        .fournisseur-container {
            max-width: 1400px; /* Increased width */
            margin: 40px auto;
            padding: 0 20px;
        }

        /* Title */
        .fournisseur-title {
            font-size: 2.5rem;
            color: #000;
            text-align: center;
            margin-bottom: 40px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        /* Grid Layout for Cards */
        .fournisseur-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        /* Card Styling */
        .fournisseur-card {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 100%;
            max-width: 1000px; /* Increased card width */
            height: 150px; /* Reduced card height */
            display: flex;
            align-items: center; /* Center content vertically */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .fournisseur-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

        /* Image Section */
        .fournisseur-image {
            flex: 0 0 120px; /* Smaller image width */
            height: 120px; /* Smaller image height */
            margin: 15px; /* Margin to center the image */
            border-radius: 10px;
            overflow: hidden;
            background-color: #e0e0e0;
        }

        .fournisseur-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        /* Content Section */
        .fournisseur-content {
            flex: 1;
            padding: 15px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .fournisseur-name {
            font-size: 1.5rem; /* Smaller font size */
            color: #000;
            margin-bottom: 5px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .fournisseur-description {
            font-size: 0.9rem; /* Smaller font size */
            color: #666;
            line-height: 1.4;
            margin-bottom: 10px;
            max-height: 40px; /* Reduced height for description */
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        /* Details Section */
        .fournisseur-details {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 10px;
        }

        .detail-item {
            display: flex;
            align-items: center;
            font-size: 0.85rem; /* Smaller font size */
            color: #333;
        }

        .detail-item .icon {
            margin-right: 8px;
            color: #757dea; /* Orange from the image */
        }

        .detail-item i {
            font-size: 1rem;
        }

        /* Actions Section */
        .fournisseur-actions {
            display: flex;
            gap: 10px;
            align-self: flex-end;
        }

        .btn {
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            transition: background-color 0.3s ease, transform 0.2s ease;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .btn-show {
            background-color: #757dea; /* Orange */
            color: #fff;
        }

        .btn-show:hover {
            background-color: #757dea;
            transform: scale(1.05);
        }

        .btn-edit {
            background-color: #333; /* Dark gray */
            color: #fff;
        }

        .btn-edit:hover {
            background-color: #444;
            transform: scale(1.05);
        }

        /* Create New Button */
        .btn-create {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            background-color: #757dea;
            color: #fff;
            padding: 12px 25px;
            border-radius: 25px;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 500;
            margin: 30px auto;
            display: block;
            width: fit-content;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-create:hover {
            background-color: #757dea;
            transform: scale(1.05);
        }

        /* No Records Found */
        .no-records {
            text-align: center;
            padding: 40px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 1000px;
            margin: 0 auto;
        }

        .no-records p {
            font-size: 1.2rem;
            color: #666;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .fournisseur-card {
                max-width: 100%;
                height: auto; /* Allow height to adjust on mobile */
                flex-direction: row;
            }

            .fournisseur-image {
                flex: 0 0 100px;
                height: 100px;
                margin: 10px;
            }

            .fournisseur-content {
                padding: 10px;
            }

            .fournisseur-title {
                font-size: 2rem;
            }

            .fournisseur-details {
                flex-direction: column;
                gap: 5px;
            }

            .fournisseur-actions {
                align-self: flex-start;
            }
        }



    </style>
    <div class="fournisseur-container">
        <h1 class="fournisseur-title">Fournisseur Index</h1>

        <div class="fournisseur-grid">
            {% for fournisseur in fournisseurs %}
                <div class="fournisseur-card">
                    <div class="fournisseur-image">
                        {% if fournisseur.imagePath %}
                            <img src="{{ asset('uploads/images/' ~ fournisseur.imagePath) }}" alt="{{ fournisseur.nomFournisseur }}" />
                        {% else %}
                            <img src="{{ asset('uploads/images/placeholder.jpg') }}" alt="Placeholder" />
                        {% endif %}
                    </div>
                    <div class="fournisseur-content">
                        <h2 class="fournisseur-name">{{ fournisseur.nomFournisseur }}</h2>
                        <p class="fournisseur-description">{{ fournisseur.description }}</p>
                        <div class="fournisseur-details">
                            <div class="detail-item">
                                <span class="icon"><i class="fas fa-tag"></i></span>
                                <span>Type: {{ fournisseur.type }}</span>
                            </div>
                            <div class="detail-item">
                                <span class="icon"><i class="fas fa-phone"></i></span>
                                <span>Phone: {{ fournisseur.telephone }}</span>
                            </div>
                            <div class="detail-item">
                                <span class="icon"><i class="fas fa-id-badge"></i></span>
                                <span>ID: {{ fournisseur.idFournisseur }}</span>
                            </div>
                        </div>
                        <div class="fournisseur-actions">
                            <a href="{{ path('app_fournisseur_show', {'idFournisseur': fournisseur.idFournisseur}) }}" class="btn btn-show">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a href="{{ path('app_fournisseur_edit', {'idFournisseur': fournisseur.idFournisseur}) }}" class="btn btn-edit">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="no-records">
                    <p>No records found.</p>
                </div>
            {% endfor %}
        </div>

        <a href="{{ path('app_fournisseur_new') }}" class="btn btn-create">
            <i ></i> Cr√©er Fournisseur
        </a>
    </div>
{% endblock %}