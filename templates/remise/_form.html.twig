
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        .detail-container {
            max-width: 800px;
            margin: 40px auto;
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            font-family: 'Arial', sans-serif;
        }

        .detail-container h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #FF6000;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 6px;
            color: #333;
        }

        input[type="text"], input[type="number"], input[type="date"], select, textarea {
            width: 100%;
            padding: 10px 14px;
            border: 2px solid #ccc;
            border-radius: 10px;
            background-color: #fff;
            font-size: 15px;
            transition: border-color 0.3s;
        }

        input:focus, select:focus, textarea:focus {
            border-color: #FF6000;
            outline: none;
        }

        .is-invalid {
            border-color: red !important;
            background-color: #ffe6e6;
        }

        .text-danger.small {
            color: red;
            font-size: 0.85rem;
            margin-top: 5px;
        }

        .btn-submit {
            margin-top: 25px;
            background-color: #FF6000;
            color: white;
            font-weight: 600;
            padding: 12px 30px;
            border: none;
            border-radius: 10px;
            transition: background-color 0.3s ease;
            width: 100%;
        }

        .btn-submit:hover {
            background-color: #e65100;
        }

        .mb-3 {
            margin-bottom: 1.5rem;
        }

        .form-section {
            background: #f8f9fa;
            padding: 24px;
            border-radius: 16px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }
    </style>

    <div class="detail-container">
        <h1><i class="fas fa-ticket-alt"></i> Nouvelle Remise</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-section">

            {% for field in [form.codePromo, form.description, form.pourcentageRemise, form.dateExpiration, form.reservation] %}
                <div class="mb-3">
                    <label class="form-label">{{ field.vars.label|default(field.vars.name|title) }}</label>
                    {{ form_widget(field, {
                        'attr': {
                            'class': (field.vars.errors|length > 0 ? 'is-invalid' : '')
                        }
                    }) }}
                    {% if field.vars.errors|length > 0 %}
                        <div class="text-danger small">{{ form_errors(field) }}</div>
                    {% endif %}
                </div>
            {% endfor %}

            <button type="submit" class="btn-submit">
                ✅ {{ button_label|default('Créer la Remise') }}
            </button>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const form = document.querySelector('form');
                const dateInput = document.querySelector('input[name$="[dateExpiration]"]');

                form.addEventListener('submit', function (event) {
                    const existingError = document.getElementById('expiration-error');
                    if (existingError) {
                        existingError.remove();
                    }

                    if (!dateInput.value) {
                        event.preventDefault();

                        const error = document.createElement('div');
                        error.className = 'text-danger small mt-1';
                        error.id = 'expiration-error';
                        error.innerText = "⚠️ Veuillez sélectionner une date d'expiration.";
                        dateInput.parentNode.appendChild(error);

                        dateInput.classList.add('is-invalid');
                    } else {
                        dateInput.classList.remove('is-invalid');
                    }
                });
            });
        </script>

        {{ form_end(form) }}
    </div>
