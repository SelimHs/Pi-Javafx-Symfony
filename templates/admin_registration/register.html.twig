{% extends 'base.html.twig' %}

{% block title %}Créer votre compte Admin{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Créer votre Compte Admin</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.password) }}
        {{ form_row(form.numeroTelephone) }}
        {{ form_row(form.addresse) }}
        {{ form_row(form.genre) }}
        {{ form_row(form.email) }}
        <button class="btn btn-primary mt-3">Créer mon compte</button>
    {{ form_end(form) }}
</div>
{% endblock %}
