{% extends 'base.html.twig' %}

{% block title %}√âv√®nements{% endblock %}

{% block body %}
<style>
  body.dark-mode input,
  body.dark-mode textarea,
  body.dark-mode select {
    background-color: #fff !important;
    color: #000 !important;
    border: 1px solid #ccc !important;
  }

  body.dark-mode .item img {
    filter: none !important;
  }

  body.dark-mode .item h4 a,
  body.dark-mode .item h6,
  body.dark-mode .item li,
  body.dark-mode .item p,
  body.dark-mode .item span,
  body.dark-mode .item strong {
    color: #f1f1f1 !important;
  }

  body.dark-mode .category {
    background-color: #333 !important;
    color: #f1f1f1 !important;
  }

  body.dark-mode .main-button a {
    background-color: transparent;
    color: #f1f1f1 !important;
    border: 1px solid #ccc;
    padding-top: 8px;
    padding-bottom: 8px;
  }

  body.dark-mode .main-button a:hover {
    background-color: #f35525;
    color: #fff !important;
    border-color: #f35525;
  }

  body.dark-mode .add-event-card {
    background: linear-gradient(135deg, #6a11cb, #2575fc) !important;
    color: white !important;
  }

  body.dark-mode .event-card .item {
    background-color: #2a2a2a !important;
    color: #f1f1f1 !important;
  }

  body.dark-mode .event-card .item h4,
  body.dark-mode .event-card .item h6,
  body.dark-mode .event-card .item ul li,
  body.dark-mode .event-card .item span,
  body.dark-mode .event-card .item strong,
  body.dark-mode .event-card .item a {
    color: #f1f1f1 !important;
  }

  body.dark-mode .event-card .item h4 a {
    color: #ffffff !important;
  }

  body.dark-mode .event-card .item h4 a:hover {
    color: #f35525 !important;
  }

  .add-event-card {
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    border-radius: 15px;
    padding: 50px 20px;
    color: white;
    min-height: 370px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .add-event-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
  }

  .item img {
    height: 220px;
    object-fit: cover;
    width: 100%;
    border-radius: 8px;
  }

  .category {
    display: inline-block;
    background: #f0f0f0;
    padding: 5px 10px;
    font-weight: 600;
    margin-top: 10px;
    border-radius: 5px;
    font-size: 0.9rem;
  }

  .main-button a {
    font-weight: 600;
    border-radius: 30px;
    padding: 10px 0;
    line-height: 1.2;
    text-align: center;
    transition: background 0.3s ease;
  }

  .main-button a.btn-outline-primary:hover {
    background-color: #007bff;
    color: white;
  }

  .main-button a.btn-success:hover {
    background-color: #218838;
  }

  .btn-countdown {
    display: inline-block;
    background: linear-gradient(135deg, #f35525, #ff7b42);
    color: white;
    font-weight: 600;
    border-radius: 30px;
    padding: 12px 24px;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-top: 10px;
  }

  .btn-countdown:hover {
    background: linear-gradient(135deg, #ff7b42, #f35525);
    box-shadow: 0 0 10px rgba(243, 85, 37, 0.4);
  }

</style>

<div class="page-heading header-text">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <span class="breadcrumb"><a href="{{ path('app_home') }}">Accueil</a> / √âv√®nements</span>
        <h3>Nos √âv√®nements</h3>
      </div>
    </div>
  </div>
</div>

<div class="section properties">
  <div class="container">
    <div class="row mb-4">
      <div class="col-lg-12 text-center">
        <input type="text" id="eventSearch" class="form-control w-50 mx-auto mb-3" placeholder="üîç Rechercher un √©v√®nement...">
        <a href="{{ path('event_countdown') }}" class="btn-countdown">‚è±Ô∏è Voir les √©v√®nements √† venir</a>
      </div>
    </div>

    <div class="row properties-box" id="eventGrid">
      <div class="col-lg-4 col-md-6 align-self-center mb-30 event-card">
        <a href="{{ path('app_event_new') }}" class="text-decoration-none">
          <div class="item add-event-card text-center shadow-lg">
            <h5 class="text-white"><i class="fa fa-plus fa-3x"></i></h5>
            <p class="text-white mt-2" style="font-size: 1.1rem; font-weight: bold;">Ajouter un √©v√®nement</p>
          </div>
        </a>
      </div>

      {% for event in events %}
        <div class="col-lg-4 col-md-6 align-self-center mb-30 event-card">
          <div class="item position-relative">
            <a href="{{ path('app_event_show', {'idEvent': event.idEvent}) }}">
              <img src="{{ asset('uploads/' ~ (event.image ? event.image : 'exemple.jpg')) }}" alt="{{ event.nomEvent }}" class="img-fluid">
              {% if not event.image %}
                <span class="position-absolute top-0 start-0 m-2 badge bg-secondary d-flex align-items-center gap-2" style="padding: 8px 12px; font-size: 0.8rem; border-radius: 20px;">
                  <i class="fa fa-image"></i> placeholder
                </span>
              {% endif %}
            </a>
            <span class="category">{{ event.nomEspace }}</span>
            <h6>{{ event.prix }} Dt</h6>
            <h4><a href="{{ path('app_event_show', {'idEvent': event.idEvent}) }}">{{ event.nomEvent }}</a></h4>
            <ul>
              <li>Date : <strong>{{ event.date }}</strong></li>
              <li>Visiteurs : <span>{{ event.nbrVisiteurs }}</span></li>
              <li>D√©tails : <span>{{ event.details|length > 40 ? event.details[:40] ~ '...' : event.details }}</span></li>
            </ul>
            <div class="main-button d-flex justify-content-between gap-2 align-items-center">
  <a href="{{ path('app_event_show', {'idEvent': event.idEvent}) }}" class="btn btn-outline-primary w-50" style="padding: 10px 0; line-height: 1.2;">Voir D√©tails</a>
  
  {% if event.date > "now"|date("Y-m-d") %}
    <a href="{{ path('app_billet_reservation', {'id': event.idEvent}) }}" class="btn btn-success w-50" style="padding: 10px 0; line-height: 1.2;">R√©server</a>
  {% else %}
    <button class="btn btn-secondary w-50" style="padding: 10px 0; line-height: 1.2;" disabled>Expir√©</button>
  {% endif %}
</div>

          </div>
        </div>
      {% else %}
        <div class="col-12">
          <div class="alert alert-warning text-center">Aucun √©v√®nement trouv√©.</div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  const searchInput = document.getElementById('eventSearch');
  const cards = document.querySelectorAll('.event-card');
  searchInput.addEventListener('input', function () {
    const query = this.value.toLowerCase();
    cards.forEach(card => {
      const content = card.textContent.toLowerCase();
      card.style.display = content.includes(query) ? '' : 'none';
    });
  });
</script>

{% endblock %}
