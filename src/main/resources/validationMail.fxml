<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.ValidationMail">
    <Label text="Entrez le code de vérification">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="codeField" promptText="Code de vérification" />
    <Button fx:id="validateButton" text="Valider" onAction="#handleValidateCode" />
    <Label fx:id="messageLabel" style="-fx-text-fill: red;" />
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>