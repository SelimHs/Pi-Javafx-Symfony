<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<AnchorPane prefHeight="671.0" prefWidth="950.0" style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.EventsMainController">
    <children>
        <!-- Barre latérale -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="671.0" prefWidth="200.0"
              style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8a2be2);
                     -fx-padding: 15px;
                     -fx-border-radius: 10px;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 3, 3);">
            <children>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>
                <Label text="Gestion des Événements"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 4, 0, 0, 2);"/>
                <Button text="🏠 Accueil" onAction="#goToAcceuil"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px;"/>
                <Button onAction="#goToAjoutEvent" text="➕ Ajouter Évènement"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px;"/>
                <Button onAction="#goToEventList" text="📋 Liste des événements"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px;"/>

            </children>
        </VBox>

        <!-- Contenu principal -->
        <VBox layoutX="220.0" layoutY="20.0" prefWidth="700.0">
            <children>
                <Label text="📋 Liste des Événements"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 5, 0, 2, 2);"/>
                <HBox spacing="10" style="-fx-padding: 10px;">
                    <TextField fx:id="searchField" prefWidth="400.0" promptText="Rechercher un événement..."
                               style="-fx-border-radius: 10px;
                                      -fx-background-radius: 10px;
                                      -fx-padding: 10px;
                                      -fx-border-color: white;
                                      -fx-background-color: rgba(255, 255, 255, 0.3);"/>
                    <Button text="🔍 Rechercher"
                            style="-fx-background-color: #9b59b6;
                                   -fx-text-fill: white;
                                   -fx-font-size: 14px;
                                   -fx-font-weight: bold;
                                   -fx-border-radius: 12px;
                                   -fx-padding: 10px;"/>
                </HBox>

                <!-- Zone d'affichage des événements sous forme de cartes -->
                <FlowPane fx:id="eventCardContainer" prefHeight="500.0" prefWidth="700.0" hgap="15" vgap="15"
                          style="-fx-padding: 10px;"/>
            </children>
        </VBox>

        <!-- Boutons d'action -->
        <HBox layoutX="220.0" layoutY="595.0" spacing="10">
            <Button onAction="#displayEvents" text="✔ Afficher Événements"
                    style="-fx-background-color: #9b59b6;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-border-radius: 12px;
                           -fx-padding: 10px;"/>

        </HBox>
    </children>
</AnchorPane>