<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="671.0" prefWidth="950.0" style="-fx-background-color: linear-gradient(to bottom, #030307, #131022);"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.EventsMainController">
    <children>
        <!-- 🌟 Barre latérale modernisée -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="671.0" prefWidth="220.0"
              style="-fx-background-color: linear-gradient(to bottom, #131022, #1A172A);
                     -fx-padding: 15px;
                     -fx-border-radius: 15 0 0 15;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0, 3, 3);">
            <children>
                <!-- Logo -->
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <Label text="Gestion des Événements"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 10px; -fx-alignment: center;"/>

                <!-- Boutons de navigation -->
                <Button text="🏠 Accueil" onAction="#goToAcceuil"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="➕ Ajouter Évènement" onAction="#goToAjoutEvent"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="📋 Liste des événements" onAction="#goToEventList"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
            </children>
        </VBox>

        <!-- 🌟 Contenu principal -->
        <VBox layoutX="250.0" layoutY="20.0" prefWidth="700.0"
              style="-fx-alignment: center; -fx-padding: 20px;">
            <children>
                <Label text="📋 Liste des Événements"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.8), 10, 0, 2, 2);"/>

                <!-- Barre de recherche -->
                <HBox spacing="10" style="-fx-padding: 10px;">
                    <TextField fx:id="searchField" prefWidth="400.0" promptText="Rechercher un événement..."
                               style="-fx-border-radius: 10px;
                                      -fx-background-radius: 10px;
                                      -fx-padding: 10px;
                                      -fx-border-color: white;
                                      -fx-background-color: rgba(255, 255, 255, 0.3);"/>
                    <Button text="🔍 Rechercher"
                            style="-fx-background-color: #9b59b6;
                                   -fx-text-fill: white;
                                   -fx-font-size: 14px;
                                   -fx-font-weight: bold;
                                   -fx-border-radius: 12px;
                                   -fx-padding: 10px;"/>
                </HBox>

                <!-- Zone d'affichage des événements sous forme de cartes -->
                <FlowPane fx:id="eventCardContainer" prefHeight="500.0" prefWidth="700.0" hgap="15" vgap="15"
                          style="-fx-padding: 10px;"/>
            </children>
        </VBox>

        <!-- 🌟 Boutons d'action -->
        <HBox layoutX="250.0" layoutY="595.0" spacing="10">
            <Button onAction="#displayEvents" text="✔ Afficher Événements"
                    style="-fx-background-color: #9b59b6;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-border-radius: 12px;
                           -fx-padding: 10px;"/>
        </HBox>
    </children>
</AnchorPane>