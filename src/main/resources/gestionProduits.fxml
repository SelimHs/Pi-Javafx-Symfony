<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>

<AnchorPane
        fx:id="root"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controller.GestionProduits"
        prefHeight="670.0" prefWidth="950.0"
        style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);">

    <children>
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="200.0"
              style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8a2be2); -fx-padding: 15px;">
            <children>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>
                <Label text="Gestion des Produits"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="🏠 Accueil" onAction="#goToAcceuil"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
                <Button text="➕ Ajouter Produit" onAction="#addProduit"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
                <Button text="📋 Liste des Produits" onAction="#goToProduitsList"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
            </children>
        </VBox>

        <VBox layoutX="220.0" layoutY="20.0" prefWidth="700.0">
            <children>
                <Label text="➕ Ajouter un Produit"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;"/>

                <GridPane hgap="12" vgap="12" style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-padding: 20px;">
                    <children>
                        <Label text="🏷 Nom Produit :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nomProduit" promptText="Nom du Produit" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="💰 Prix Produit :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="prixProduit" promptText="Prix en DT" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="📝 Description :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="descriptionProduit" promptText="Description" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="📦 Catégorie :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <ComboBox fx:id="categorieProduit" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <Label text="🔢 Quantité :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="quantiteProduit" promptText="Quantité" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="🏢 Fournisseur :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <ComboBox fx:id="fournisseurProduit" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    </children>
                </GridPane>

                <Button text="✔ Ajouter le Produit" onAction="#addProduit"
                        style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px;"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
