<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane
        fx:id="root"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controller.FournisseurMainController"
        prefHeight="670.0" prefWidth="950.0"
        style="-fx-background-color: linear-gradient(to bottom, #030307, #131022);">

    <children>
        <!-- 🌟 Barre latérale modernisée -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="220.0"
              style="-fx-background-color: linear-gradient(to bottom, #131022, #1A172A);
                     -fx-padding: 15px;
                     -fx-border-radius: 15 0 0 15;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0, 3, 3);">
            <children>
                <!-- Logo -->
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <Label text="Gestion des Fournisseurs"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 10px; -fx-alignment: center;"/>

                <!-- Boutons de navigation -->
                <Button text="🏠 Accueil" onAction="#goToAcceuil"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="➕ Ajouter Fournisseur" onAction="#goToGestionFournisseur"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="📋 Liste des Fournisseurs"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
            </children>
        </VBox>

        <!-- 🌟 Contenu principal -->
        <VBox layoutX="250.0" layoutY="20.0" prefWidth="700.0"
              style="-fx-alignment: center; -fx-padding: 20px;">
            <children>
                <Label text="📋 Liste des Fournisseurs"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.8), 10, 0, 2, 2);"/>

                <!-- 🔍 Barre de recherche -->
                <HBox spacing="10" style="-fx-padding: 15px;">
                    <TextField fx:id="searchField" prefWidth="400.0" promptText="🔍 Rechercher un fournisseur..."
                               style="-fx-border-radius: 10px;
                                      -fx-background-radius: 10px;
                                      -fx-padding: 10px;
                                      -fx-border-color: white;
                                      -fx-background-color: rgba(255, 255, 255, 0.3);"/>
                    <Button text="Rechercher"
                            style="-fx-background-color: #9b59b6;
                                   -fx-text-fill: white;
                                   -fx-font-size: 14px;
                                   -fx-font-weight: bold;
                                   -fx-border-radius: 12px;
                                   -fx-padding: 10px 20px;
                                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 2, 2);"/>
                </HBox>

                <!-- 📌 Zone d'affichage des fournisseurs -->
                <!-- 📌 Zone d'affichage des fournisseurs avec des cartes plus claires -->
                <ScrollPane prefHeight="500.0" prefWidth="700.0"
                            style="-fx-background-color: transparent;">
                    <content>
                        <FlowPane fx:id="fournisseurCardContainer" hgap="15" vgap="15" prefHeight="500.0" prefWidth="700.0"
                                  style="-fx-padding: 15px;"/>
                    </content>
                </ScrollPane>

            </children>
        </VBox>
    </children>
</AnchorPane>