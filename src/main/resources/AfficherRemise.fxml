<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="671.0" prefWidth="950.0" style="-fx-background-color: linear-gradient(to bottom, #030307, #131022);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RemiseMainController">
    <children>
        <!-- 🌟 Barre latérale modernisée -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="671.0" prefWidth="220.0"
              style="-fx-background-color: linear-gradient(to bottom, #131022, #1A172A);
                     -fx-padding: 15px;
                     -fx-border-radius: 15 0 0 15;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0, 3, 3);">
            <children>
                <!-- Logo -->
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <Label text="Gestion Remises"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 10px; -fx-alignment: center;"/>

                <!-- Boutons de navigation -->
                <Button text="🏠 Accueil" onAction="#goToAcceuil"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="➕ Ajouter Remise" onAction="#goToAjout"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="📋 Liste des Remises"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
            </children>
        </VBox>

        <!-- 🌟 Contenu principal -->
        <VBox layoutX="250.0" layoutY="20.0" prefWidth="680.0"
              style="-fx-alignment: center; -fx-padding: 20px;">
            <children>

                <!-- 🔵 Titre avec ombre -->
                <Label text="📋 Liste des Remises"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.8), 10, 0, 2, 2);"/>

                <!-- 📌 Barre de recherche -->
                <HBox spacing="10">
                    <TextField fx:id="searchField" prefWidth="400.0" promptText="Rechercher une remise..."
                               style="-fx-border-radius: 10px;
                                      -fx-background-radius: 10px;
                                      -fx-padding: 10px;
                                      -fx-border-color: white;
                                      -fx-background-color: rgba(255, 255, 255, 0.3);" />
                    <Button text="🔍 Rechercher"
                            style="-fx-background-color: #9b59b6;
                                   -fx-text-fill: white;
                                   -fx-font-size: 14px;
                                   -fx-border-radius: 10px;
                                   -fx-padding: 8px;"
                            onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
                </HBox>

                <!-- 📌 Zone d'affichage des remises -->
                <FlowPane fx:id="remiseCardContainer" hgap="15" prefHeight="500.0" prefWidth="700.0"
                          style="-fx-background-color: rgba(255, 255, 255, 0.15);
                                 -fx-padding: 15px;
                                 -fx-border-radius: 12px;
                                 -fx-border-color: white;
                                 -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);"
                          vgap="15" />
            </children>
        </VBox>

        <!-- ✅ Bouton d'action avec effet d'ombre -->
        <Button layoutX="250.0" layoutY="618.0" onAction="#displayRemises"
                style="-fx-background-color: #9b59b6;
                       -fx-text-fill: white;
                       -fx-font-size: 16px;
                       -fx-font-weight: bold;
                       -fx-border-radius: 12px;
                       -fx-padding: 10px;
                       -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"
                text="📂 Afficher Remises"
                onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
    </children>
</AnchorPane>