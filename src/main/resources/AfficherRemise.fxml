                    <!-- ComboBox pour l'ordre de tri -->
                    <ComboBox fx:id="sortOrderComboBox" promptText="Trier par ordre"
                              style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;"/>

                    <!-- Champ de recherche -->
                    <TextField fx:id="searchField" prefWidth="400.0" promptText="Rechercher une remise..."
                               style="-fx-border-radius: 10px;
                  -fx-background-radius: 10px;
                  -fx-padding: 10px;
                  -fx-border-color: white;
                  -fx-background-color: rgba(255, 255, 255, 0.3);"
