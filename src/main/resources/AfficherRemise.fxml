<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="671.0" prefWidth="950.0" style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RemiseMainController">
    <children>
        <!-- 📌 Barre latérale avec effet d'ombre -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="671.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8a2be2);                      -fx-padding: 15px;                      -fx-border-radius: 10px;                      -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 3, 3);">
            <children>
                <Label style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 4, 0, 0, 2);" text="Gestion Remises" />
                <Button text="🏠 Accueil"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px;"/>
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;-fx-padding: 10px; -fx-border-radius: 8px;" text="📋 Liste des remises" />
                <Button  style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;                                -fx-padding: 10px; -fx-border-radius: 8px;" text="➕ Ajouter Remise" />
            </children>
        </VBox>

        <!-- 📌 Contenu principal -->
        <VBox layoutX="220.0" layoutY="20.0" prefWidth="700.0">
            <children>
                <Label style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 5, 0, 2, 2);" text="📋 Liste des Remises" />

                <HBox spacing="10">
                    <TextField fx:id="searchField" prefWidth="400.0" promptText="Rechercher une remise..." style="-fx-border-radius: 10px; -fx-background-radius: 10px; -fx-padding: 10px;                                       -fx-border-color: white; -fx-background-color: rgba(255, 255, 255, 0.3);" />
                    <Button style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;                                    -fx-border-radius: 10px; -fx-padding: 8px;" text="🔍 Rechercher" />
                </HBox>

                <!-- 📌 Zone d'affichage des remises -->
                <FlowPane fx:id="remiseCardContainer" hgap="15" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-padding: 15px;                                  -fx-border-radius: 12px; -fx-border-color: white;                                  -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);" vgap="15" />
            </children>
        </VBox>

        <!-- 📌 Boutons d'action avec effet d'ombre -->
        <Button layoutX="220.0" layoutY="618.0" onAction="#displayRemises" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 16px;                        -fx-border-radius: 12px; -fx-padding: 10px;                        -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);" text="📂 Afficher Remises" />
    </children>
</AnchorPane>
