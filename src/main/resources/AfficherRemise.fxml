            <children>

                <!-- ðŸ”µ Titre avec ombre -->
                <Label text="ðŸ“‹ Liste des Remises"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.8), 10, 0, 2, 2);"/>

                <!-- ðŸ“Œ Barre de recherche -->
                <HBox spacing="10">
                    <!-- ComboBox pour le critÃ¨re de filtrage -->
                    <ComboBox fx:id="filterCriteriaComboBox" promptText="Filtrer par..."
