<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.control.Label?>
<AnchorPane prefHeight="671.0" prefWidth="950.0" style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AcceuilController">
    <children>
        <!-- Barre latÃ©rale -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="671.0" prefWidth="200.0"
              style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8a2be2);
                     -fx-padding: 15px;
                     -fx-border-radius: 10px;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 3, 3);">
            <children>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>


            </children>
        </VBox>

        <!-- Contenu principal -->
        <VBox layoutX="220.0" layoutY="20.0" prefWidth="700.0" style="-fx-alignment: center; -fx-padding: 10px;">
            <children>
                <Label text="Bienvenue sur la plateforme"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 5, 0, 2, 2);"/>

                <!-- Boutons principaux -->
                <VBox spacing="20" style="-fx-alignment: center; -fx-padding: 100px;">
                    <Button onAction="#goToReservation" text="Reservation"
                            style="-fx-background-color: #9b59b6;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16px;
                                   -fx-font-weight: bold;
                                   -fx-border-radius: 12px;
                                   -fx-padding: 20px 40px;"/>
                    <Button onAction="#goToRemise" text="Remise"
                            style="-fx-background-color: #9b59b6;
                                   -fx-text-fill: white;
                                   -fx-font-size: 16px;
                                   -fx-font-weight: bold;
                                   -fx-border-radius: 12px;
                                   -fx-padding: 20px 40px;"/>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>