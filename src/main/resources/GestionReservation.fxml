<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane
        fx:id="root"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controller.GestionReservation"
        prefHeight="670.0" prefWidth="950.0"
        style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);">

    <children>

        <!-- 📌 Barre latérale avec effet d'ombre -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="200.0"
              style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8a2be2);
                     -fx-padding: 15px;
                     -fx-border-radius: 10px;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 3, 3);">
            <children>


                <Label text="Gestion des Réservations"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 4, 0, 0, 2);"/>

                <Button text="🏠 Accueil"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px;" onAction="#goToAcceuil"/>
                <Button text="➕ Ajouter Réservation"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px;"/>
                <Button text="📋 Liste des Réservations"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px;" onAction="#navigateToReservations" />
            </children>
        </VBox>

        <!-- 📌 Zone principale -->
        <VBox layoutX="220.0" layoutY="20.0" prefWidth="700.0">
            <children>

                <!-- 🔵 Titre avec ombre -->
                <Label text="➕ Ajouter une Réservation"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 5, 0, 2, 2);"/>

                <!-- 📜 Formulaire avec effet de verre -->
                <GridPane hgap="12" vgap="12"
                          style="-fx-background-color: rgba(255, 255, 255, 0.15);
                                 -fx-padding: 20px;
                                 -fx-border-radius: 12px;
                                 -fx-border-color: white;
                                 -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
                    <children>
                        <Label text="👤 ID Utilisateur :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="userIdField" promptText="ID de l'utilisateur"
                                   style="-fx-border-radius: 10px;
                                          -fx-background-radius: 10px;
                                          -fx-padding: 10px;
                                          -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="🎫 ID Événement :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="eventIdField" promptText="ID de l'événement"
                                   style="-fx-border-radius: 10px;
                                          -fx-background-radius: 10px;
                                          -fx-padding: 10px;
                                          -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="📅 Date :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <DatePicker fx:id="dateReservationPicker"
                                    GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="📄 Statut :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <ComboBox fx:id="statutComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Confirmée"/>
                                    <String fx:value="En attente"/>
                                    <String fx:value="Annulée"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </children>
                </GridPane>

                <!-- ✅ Bouton de validation avec effet d'ombre -->
                <Button fx:id="ajoutreserv" text="✔ Ajouter Réservation"
                        style="-fx-background-color: #9b59b6;
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-border-radius: 12px;
                               -fx-padding: 10px;
                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"
                        onAction="#ajouterReservation"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
