<AnchorPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.HomePage"
            stylesheets="@/styles.css"
            style="-fx-background-color: linear-gradient(to bottom, #030307, #131022);">

    <!-- ðŸŒŸ Barre latÃ©rale modernisÃ©e -->
    <VBox prefWidth="220" style="-fx-background-color: linear-gradient(to bottom, #131022, #1A172A);
                                -fx-padding: 15px; -fx-spacing: 20px; -fx-alignment: top-center;"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">

        <!-- Logo -->
        <ImageView fitWidth="90" fitHeight="90" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/logo.jpeg"/>
            </image>
        </ImageView>

        <!-- Espace vide pour pousser l'horloge vers le milieu -->
        <VBox VBox.vgrow="ALWAYS" alignment="CENTER">
            <!-- Horloge murale -->
            <StackPane alignment="CENTER">
                <Pane fx:id="clockPane" prefWidth="150" prefHeight="150" style="-fx-background-color: transparent;" />
            </StackPane>
        </VBox>

        <!-- Bouton utilisateur -->
        <Button fx:id="userButton" text="Profil" styleClass="sidebar-button"
                style="-fx-font-size: 16px; -fx-text-fill: #a868a0; -fx-background-color: transparent; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect">
            <graphic>
                <ImageView fitWidth="24" fitHeight="24">
                    <image>
                        <Image url="@images/user.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <!-- Autres Boutons -->
        <Button fx:id="dashboardButton" text="ðŸ  Accueil" styleClass="sidebar-button" onAction="#goToAcceuil"
                style="-fx-font-size: 16px; -fx-text-fill: #a868a0; -fx-background-color: transparent; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
        <Button fx:id="settingsButton" text="ParamÃ¨tres" styleClass="sidebar-button"
                style="-fx-font-size: 16px; -fx-text-fill: #a868a0; -fx-background-color: transparent; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
    </VBox>

    <!-- ðŸŒŸ Contenu principal -->
    <VBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="250" AnchorPane.rightAnchor="0" style="-fx-padding: 20px;">

        <!-- Barre supÃ©rieure -->
        <HBox spacing="20" style="-fx-alignment: center-left; -fx-padding: 15px; -fx-background-color: rgba(255, 255, 255, 0.1); -fx-background-radius: 10px;">

            <!-- ComboBox pour le filtrage -->
            <ComboBox fx:id="filterComboBox" promptText="Filtrer par..."
                      style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 10px;"/>

            <!-- ComboBox pour le tri -->
            <ComboBox fx:id="sortOrderComboBox" promptText="Trier par ordre"
                      style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 10px;"/>

            <!-- Champ de recherche -->
            <TextField fx:id="searchField" promptText="Rechercher un utilisateur..." HBox.hgrow="ALWAYS"
                       style="-fx-font-size: 14px; -fx-background-radius: 20px; -fx-padding: 10px; -fx-background-color: rgba(255, 255, 255, 0.3); -fx-border-color: white;"/>

            <!-- Bouton de recherche -->
            <Button styleClass="search-button" style="-fx-background-radius: 20px; -fx-padding: 10px;">
                <graphic>
                    <ImageView fitWidth="24" fitHeight="24">
                        <image>
                            <Image url="@images/search.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Bouton de dÃ©connexion -->
            <Button fx:id="logoutButton" text="DÃ©connexion" styleClass="logout-button" onAction="#handleLogout"
                    style="-fx-font-size: 14px; -fx-text-fill: #e74c3c; -fx-background-radius: 20px; -fx-padding: 10px;">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@images/logout.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <!-- Liste des utilisateurs dans un GridPane -->
        <ScrollPane fx:id="userListScrollPane" style="-fx-background: transparent; -fx-border-color: transparent;" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
            <GridPane fx:id="userCards" hgap="20" vgap="20" style="-fx-padding: 20px;" GridPane.hgrow="ALWAYS" />
        </ScrollPane>

        <!-- Section des boutons d'actions -->
        <HBox spacing="20" style="-fx-alignment: center-left; -fx-padding: 15px;">
            <Button fx:id="addButton" text="Ajouter" styleClass="action-button" onAction="#handleAddUser"
                    style="-fx-font-size: 14px; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 20px; -fx-padding: 10px 20px;"/>
        </HBox>
    </VBox>
</AnchorPane>