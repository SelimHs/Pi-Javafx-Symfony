<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>

<AnchorPane
        fx:id="root"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controller.ProduitMainController"
        prefHeight="671.0" prefWidth="950.0"
        style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);">

    <children>
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="671.0" prefWidth="200.0"
              style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8a2be2);">
            <children>
                <Label style="-fx-font-size: 18px; -fx-padding: 10px;" text="Gestion Produits" textFill="white" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Liste des Produits" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Ajouter Produit" />
            </children>
        </VBox>

        <VBox layoutX="220.0" layoutY="20.0" prefWidth="700.0">
            <children>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Liste des Produits" />
                <HBox spacing="10">
                    <TextField prefWidth="400.0" promptText="Rechercher un produit..." />
                    <Button text="Rechercher"  />
                </HBox>

                <!-- Zone d'affichage des produits sous forme de cartes -->
                <FlowPane fx:id="produitCardContainer" prefHeight="500.0" prefWidth="700.0" hgap="15" vgap="15" />
            </children>
        </VBox>

        <!-- Boutons d'action -->
        <Button layoutX="220.0" layoutY="595.0" onAction="#displayProduits" text="Afficher Produits" />
        <Button fx:id="deleteBouton" layoutX="827.0" layoutY="595.0"  text="Supprimer" />
        <Button fx:id="modifierBouton" layoutX="735.0" layoutY="595.0"  text="Modifier" />
    </children>
</AnchorPane>
