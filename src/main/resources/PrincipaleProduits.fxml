<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane
        fx:id="root"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controller.ProduitMainController"
        prefHeight="670.0" prefWidth="950.0"
        style="-fx-background-color: linear-gradient(to bottom, #030307, #131022);">

    <children>
        <!-- 🌟 Barre latérale modernisée -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="220.0"
              style="-fx-background-color: linear-gradient(to bottom, #131022, #1A172A);
                     -fx-padding: 15px;
                     -fx-border-radius: 15 0 0 15;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0, 3, 3);">
            <children>
                <!-- Logo -->
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <Label text="Gestion des Produits"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 10px; -fx-alignment: center;"/>

                <!-- Boutons de navigation -->
                <Button text="🏠 Accueil" onAction="#goToAcceuil"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="➕ Ajouter Produit" onAction="#goToGestionProduits"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="📋 Liste des Produits"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
            </children>
        </VBox>

        <!-- 🌟 Contenu principal -->
        <VBox layoutX="250.0" layoutY="20.0" prefWidth="700.0"
              style="-fx-alignment: center; -fx-padding: 20px;">
            <children>
                <Label text="📋 Liste des Produits"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.8), 10, 0, 2, 2);"/>

                <!-- 🔍 Barre de recherche -->
                <HBox spacing="10" style="-fx-padding: 15px;">
                    <!-- ComboBox pour le critère de filtrage -->
                    <ComboBox fx:id="filterCriteriaComboBox" promptText="Filtrer par..."
                              style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;"/>

                    <!-- ComboBox pour l'ordre de tri -->
                    <ComboBox fx:id="sortOrderComboBox" promptText="Trier par ordre"
                              style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;"/>

                    <!-- Champ de recherche -->
                    <TextField fx:id="searchField" prefWidth="400.0" promptText="Rechercher un produit..."
                               style="-fx-border-radius: 10px;
                  -fx-background-radius: 10px;
                  -fx-padding: 10px;
                  -fx-border-color: white;
                  -fx-background-color: rgba(255, 255, 255, 0.3);"
                               onKeyReleased="#searchProduits"/>


                </HBox>

                <!-- 📌 Zone d'affichage des produits sous forme de cartes -->
                <ScrollPane fitToWidth="true" fitToHeight="true"
                            style="-fx-background-color: transparent;">
                    <content>
                        <FlowPane fx:id="produitCardContainer" prefHeight="500.0" prefWidth="700.0" hgap="15" vgap="15"
                                  style="-fx-padding: 15px;"/>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>