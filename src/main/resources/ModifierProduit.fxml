<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom, #a868a0, #34495e);"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ModifierProduit">

    <!-- 🟣 Conteneur Principal -->
    <VBox spacing="20" alignment="CENTER"
          style="-fx-padding: 30px; -fx-background-radius: 15px;">

        <!-- 🏷️ Titre -->
        <Label text="✏ Modifier un Produit"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;
                      -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.3), 10, 0, 2, 2);"/>

        <!-- 📋 Formulaire -->
        <GridPane hgap="12" vgap="15"
                  style="-fx-background-color: rgba(255, 255, 255, 0.15);
                         -fx-padding: 20px; -fx-border-radius: 12px;
                         -fx-border-color: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">

            <Label text="🏷 Nom Produit :" textFill="white" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nomProduit" promptText="Nom du Produit"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="💰 Prix Produit :" textFill="white" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="prixProduit" promptText="Prix en DT"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="📝 Description :" textFill="white" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="descriptionProduit" promptText="Description"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="📦 Catégorie :" textFill="white" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <ComboBox fx:id="categorieProduit"
                      style="-fx-background-color: rgba(255, 255, 255, 0.3);
                             -fx-border-radius: 10px; -fx-padding: 10px;
                             -fx-border-color: white; -fx-text-fill: white;"
                      GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="🔢 Quantité :" textFill="white" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="quantiteProduit" promptText="Quantité"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="🏢 Fournisseur :" textFill="white" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <ComboBox fx:id="fournisseurProduit"
                      style="-fx-background-color: rgba(255, 255, 255, 0.3);
                             -fx-border-radius: 10px; -fx-padding: 10px;
                             -fx-border-color: white; -fx-text-fill: white;"
                      GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            <Label text="📷 Image :" textFill="white" GridPane.rowIndex="6" GridPane.columnIndex="0" />
            <ImageView fx:id="produitImage" fitHeight="120" fitWidth="180" preserveRatio="true"
                       GridPane.rowIndex="6" GridPane.columnIndex="1" />
            <Button text="📂 Choisir Image" onAction="#choisirImage"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;
               -fx-border-radius: 12px; -fx-padding: 10px 18px;"
                    GridPane.rowIndex="7" GridPane.columnIndex="1" />

        </GridPane>

        <!-- 🟢🔴 Boutons d'action -->
        <HBox spacing="15">
            <Button fx:id="btnModifier" text="💾 Modifier" onAction="#modifierProduit"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-border-radius: 12px; -fx-padding: 12px 20px;
                           -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"/>

            <Button fx:id="btnRetour" text="❌ Annuler" onAction="#retourAfficherProduits"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-border-radius: 12px; -fx-padding: 12px 20px;
                           -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"/>
        </HBox>
    </VBox>
</AnchorPane>
