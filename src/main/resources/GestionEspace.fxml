<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane fx:id="root" prefHeight="670.0" prefWidth="950.0" style="-fx-background-color: linear-gradient(to bottom, #030307, #131022);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.GestionEspace">

    <children>
        <!-- 🌟 Barre latérale modernisée -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="220.0"
              style="-fx-background-color: linear-gradient(to bottom, #131022, #1A172A);
                     -fx-padding: 15px;
                     -fx-border-radius: 15 0 0 15;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0, 3, 3);">

            <children>
                <!-- Logo -->
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <Label text="Gestion des Espaces"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 10px; -fx-alignment: center;"/>

                <!-- Boutons de navigation -->
                <Button text="🏠 Accueil" onAction="#retourAccueil"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="➕ Ajouter Espace"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="📋 Liste des Espaces" onAction="#afficherEspaces"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
            </children>
        </VBox>

        <!-- 🌟 Contenu principal -->
        <VBox layoutX="250.0" layoutY="20.0" prefWidth="680.0"
              style="-fx-alignment: center; -fx-padding: 20px;">
            <children>

                <!-- 🔵 Titre avec ombre -->
                <Label text="➕ Ajouter un Espace"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.8), 10, 0, 2, 2);"/>

                <GridPane hgap="15" vgap="15"
                          style="-fx-background-color: rgba(255, 255, 255, 0.1);
                 -fx-padding: 20px;
                 -fx-border-radius: 12px;
                 -fx-border-color: white;
                 -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150"/>
                        <ColumnConstraints prefWidth="400"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>

                    <children>
                        <Label text="🏠 Nom de l'espace :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="nomEspace" promptText="Nom de l'espace"
                                   style="-fx-border-radius: 10px;
                          -fx-background-radius: 10px;
                          -fx-padding: 10px;
                          -fx-border-color: white;
                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="📍 Adresse :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="adresseEspace" promptText="Adresse complète"
                                   style="-fx-border-radius: 10px;
                          -fx-background-radius: 10px;
                          -fx-padding: 10px;
                          -fx-border-color: white;
                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="👥 Capacité :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="capaciteEspace" promptText="Nombre de personnes"
                                   style="-fx-border-radius: 10px;
                          -fx-background-radius: 10px;
                          -fx-padding: 10px;
                          -fx-border-color: white;
                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="📅 Disponibilité :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <ComboBox fx:id="disponibiliteEspace" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Disponible" />
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <Label text="💰 Prix (DT) :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <TextField fx:id="prixEspace" promptText="Prix en DT"
                                   style="-fx-border-radius: 10px;
                          -fx-background-radius: 10px;
                          -fx-padding: 10px;
                          -fx-border-color: white;
                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                        <Label text="🏢 Type d'espace :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <TextField fx:id="typeEspace" promptText="Type d'espace"
                                   style="-fx-border-radius: 10px;
                          -fx-background-radius: 10px;
                          -fx-padding: 10px;
                          -fx-border-color: white;
                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                        <Label text="🖼 Image :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
                            <Button text="Choisir Image" onAction="#choisirImage"
                                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-border-radius: 8px; -fx-padding: 8px 16px;"/>
                            <ImageView fx:id="espaceImageView" fitWidth="150" fitHeight="100" preserveRatio="true"
                                       style="-fx-border-color: white; -fx-border-radius: 5px;"/>
                        </HBox>

                    </children>
                </GridPane>












                <!-- ✅ Bouton de validation avec effet d'ombre -->
                <Button fx:id="ajoutesp" text="✔ Ajouter l'Espace"
                        style="-fx-background-color: #9b59b6;
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-border-radius: 12px;
                               -fx-padding: 10px;
                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"
                        onAction="#ajouterEspace"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>


            </children>
        </VBox>
    </children>
</AnchorPane>