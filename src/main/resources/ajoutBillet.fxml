<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<AnchorPane fx:id="root" prefHeight="671.0" prefWidth="950.0" style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BilletsController">

    <children>
        <!-- Barre latérale -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="671.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8a2be2);                      -fx-padding: 15px;                      -fx-border-radius: 10px;                      -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 3, 3);">
            <children>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>
                <Label style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 4, 0, 0, 2);" text="Gestion Billets" />
                <Button text="🏠 Accueil" onAction="#goToAcceuil"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px;"/>
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;-fx-padding: 10px; -fx-border-radius: 8px;" text="➕ Ajouter Billet" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;-fx-padding: 10px; -fx-border-radius: 8px;" text="📋 Liste des billets" onAction="#goToBilletList" />

            </children>
        </VBox>

        <!-- Contenu principal -->
        <VBox layoutX="220.0" layoutY="20.0" prefWidth="700.0">
            <children>
                <Label style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 5, 0, 2, 2);" text="➕ Ajouter un Billet" />

                <GridPane hgap="12" style="-fx-background-color: rgba(255, 255, 255, 0.15);                                  -fx-padding: 20px;                                  -fx-border-radius: 12px;                                  -fx-border-color: white;                                  -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);" vgap="12">
                    <children>
                        <Label text="🎤 Propriétaire :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="billetProprietaire" promptText="Nom du propriétaire" style="-fx-border-radius: 10px;                                           -fx-background-radius: 10px;                                           -fx-padding: 10px;                                           -fx-border-color: white;                                           -fx-background-color: rgba(255, 255, 255, 0.3);" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="💰 Prix :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="billetPrix" promptText="Prix en Dt" style="-fx-border-radius: 10px;                                           -fx-background-radius: 10px;                                           -fx-padding: 10px;                                           -fx-border-color: white;                                           -fx-background-color: rgba(255, 255, 255, 0.3);" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="🎫 Type de billet :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <ComboBox fx:id="billetType" style="-fx-border-radius: 10px;                                          -fx-background-radius: 10px;                                          -fx-padding: 10px;                                          -fx-border-color: white;                                          -fx-background-color: rgba(255, 255, 255, 0.3);" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="SIMPLE" />
                                    <String fx:value="DUO" />
                                    <String fx:value="VIP" />
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <Label text="🎟 Événement :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <ComboBox fx:id="billetEvent" promptText="Sélectionner un événement" style="-fx-border-radius: 10px;                                          -fx-background-radius: 10px;                                          -fx-padding: 10px;                                          -fx-border-color: white;                                          -fx-background-color: rgba(255, 255, 255, 0.3);" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <Button text="✔ Ajouter le Billet" onAction="#addBillet"
                        style="-fx-background-color: #9b59b6;
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-border-radius: 12px;
                               -fx-padding: 10px;"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
