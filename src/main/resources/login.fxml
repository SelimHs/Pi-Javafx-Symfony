<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.paint.Color?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.Login"
            prefHeight="800.0" prefWidth="1200.0">

    <!-- Barre Latérale -->
    <left>
        <VBox prefWidth="250.0" style="-fx-background-color: #6A0DAD;
                                      -fx-padding: 40px; -fx-border-radius: 10px; -fx-alignment: center;">
            <children>
                <ImageView fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/images/logo.jpeg"/>
                    </image>
                </ImageView>

                <VBox spacing="30.0" style="-fx-alignment: center; -fx-padding: 30px 0;">
                    <Hyperlink text="Accueil" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
                    <Hyperlink text="À propos" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
                    <Hyperlink text="Contact" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
                    <Hyperlink text="Politique de confidentialité" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- Contenu Principal -->
    <center>
        <VBox spacing="30.0" style="-fx-alignment: center; -fx-padding: 40px;
               -fx-background-color: #FFFFFF; -fx-background-radius: 15px;
               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 20, 20);">
            <children>
                <Label text="Bienvenue dans votre espace"
                       style="-fx-font-size: 26px; -fx-text-fill: #6A0DAD; -fx-font-weight: bold;"/>

                <!-- Section Email -->
                <TextField fx:id="text" promptText="Email"
                           style="-fx-background-color: #F1F1F1; -fx-font-size: 14px; -fx-padding: 12px;
                                  -fx-border-radius: 10px; -fx-pref-width: 100%; -fx-border-color: #6A0DAD;
                                  -fx-text-fill: #333;"/>

                <!-- Section Mot de Passe -->
                <PasswordField fx:id="password" promptText="Mot de passe"
                               style="-fx-background-color: #F1F1F1; -fx-font-size: 14px; -fx-padding: 12px;
                                      -fx-border-radius: 10px; -fx-pref-width: 100%; -fx-border-color: #6A0DAD;
                                      -fx-text-fill: #333;"/>

                <Label text="Mot de passe oublié ?" fx:id="forgotPasswordLabel"
                       style="-fx-font-size: 13px; -fx-text-fill: #B1B1B1; cursor: pointer;"/>

                <HBox spacing="20.0" style="-fx-alignment: center;">
                    <Button text="Se connecter" fx:id="loginButton" onAction="#handleLoginButtonAction"
                            style="-fx-background-color: #6A0DAD; -fx-text-fill: white; -fx-font-size: 15px;
                                   -fx-font-weight: bold; -fx-border-radius: 10px; -fx-padding: 12px 30px;"/>
                    <Button text="Créer un compte" fx:id="signupButton" onAction="#handleCreecompte"
                            style="-fx-background-color: transparent; -fx-border-color: #6A0DAD;
                                   -fx-text-fill: #6A0DAD; -fx-font-size: 15px; -fx-font-weight: bold;
                                   -fx-border-radius: 10px; -fx-padding: 12px 30px;"/>
                </HBox>
            </children>
        </VBox>
    </center>

    <!-- Footer (Pied de page) -->
    <bottom>
        <VBox spacing="15.0" style="-fx-alignment: center; -fx-padding: 20px; -fx-background-color: #6A0DAD;">
            <children>
                <Label text="FAQ" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Hyperlink text="Comment créer un compte ?" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                <Hyperlink text="Comment récupérer mon mot de passe ?" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                <Hyperlink text="Qui contacter en cas de problème ?" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            </children>
        </VBox>
    </bottom>
</BorderPane>
