<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.ForgotPassword"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox spacing="20.0" alignment="CENTER" style="-fx-padding: 40px;">
            <Label text="Récupération du mot de passe" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #6A0DAD;"/>
            <Label text="Veuillez entrer votre adresse email pour récupérer votre mot de passe." style="-fx-font-size: 14px; -fx-text-fill: #333;"/>

            <TextField fx:id="emailField" promptText="Email"
                       style="-fx-background-color: #F1F1F1; -fx-font-size: 14px; -fx-padding: 12px; -fx-border-radius: 10px; -fx-pref-width: 300px; -fx-border-color: #6A0DAD; -fx-text-fill: #333;"/>

            <HBox spacing="20.0" alignment="CENTER">
                <Button text="Envoyer" onAction="#handleSendEmail"
                        style="-fx-background-color: #6A0DAD; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-padding: 12px 30px;"/>
                <Button text="Retour" onAction="#handleBackToLogin"
                        style="-fx-background-color: transparent; -fx-border-color: #6A0DAD; -fx-text-fill: #6A0DAD; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-padding: 12px 30px;"/>
            </HBox>

            <Label fx:id="messageLabel" style="-fx-font-size: 14px; -fx-text-fill: #FF0000;"/>
        </VBox>
    </center>
</BorderPane>