<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.FrontDetailEspace"
            prefHeight="900.0" prefWidth="1400.0"
            style="-fx-background-image: url('/images/front-bg.jpg'); -fx-background-size: cover;">

    <children>
        <!-- 🚀 Barre de navigation -->
        <HBox layoutX="0.0" layoutY="0.0" prefHeight="60.0" prefWidth="1400.0"
              style="-fx-background-color: rgba(30,30,46,0.8); -fx-padding: 10px; -fx-alignment: center-left;">
            <children>
                <HBox style="-fx-border-color: #F39C12; -fx-border-width: 2px; -fx-padding: 5px; -fx-border-radius: 10px; -fx-alignment: center;">
                    <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/logo.png" />
                        </image>
                    </ImageView>
                    <Label text="Lamma" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px;"/>
                </HBox>

                <!-- Menu interactif -->
                <HBox fx:id="navBar" spacing="20.0" style="-fx-alignment: center; -fx-padding: 0 20px;">
                    <Button fx:id="btnAccueil" text="🏠 Accueil" onAction="#retourAfficherEspaces"
                            style="-fx-background-color: transparent; -fx-text-fill: #F39C12; -fx-border-radius: 10px; -fx-padding: 10px 18px;"/>
                    <Button fx:id="btnEvenements" text="📅 Événements" onAction="#goToEvenements"
                            style="-fx-background-color: transparent; -fx-text-fill: #F39C12; -fx-border-radius: 10px; -fx-padding: 10px 18px;"/>
                    <Button fx:id="btnEspace" text="📌 Espaces" onAction="#goToEspace"
                            style="-fx-background-color: transparent; -fx-text-fill: #F39C12; -fx-border-radius: 10px; -fx-padding: 10px 18px;"/>
                </HBox>

                <!-- Icônes à droite -->
                <HBox spacing="15.0" style="-fx-alignment: right;">
                    <ImageView fx:id="cartIcon" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/images/reserver.png"/>
                        </image>
                    </ImageView>
                    <ImageView fx:id="profileIcon" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/images/profile.png"/>
                        </image>
                    </ImageView>
                </HBox>
            </children>
        </HBox>

        <!-- 📌 Titre principal -->
        <Label fx:id="titleLabel" text="Détails de l'Espace"
               layoutX="50.0" layoutY="80.0"
               style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;">
            <effect>
                <DropShadow color="rgba(0,0,0,0.3)" radius="5" offsetX="3" offsetY="3"/>
            </effect>
        </Label>

        <!-- 🌟 Conteneur principal -->
        <HBox layoutX="50.0" layoutY="120.0" spacing="40.0" style="-fx-padding: 20px; -fx-alignment: center-left;">

            <!-- 📌 Section gauche : Détails de l'espace & Organisateurs -->
            <VBox prefWidth="350.0" maxWidth="252" spacing="20.0">

                <!-- 📋 Détails de l'espace -->
                <VBox style="-fx-background-color: rgba(255, 255, 255, 0.15);
                     -fx-padding: 20px; -fx-border-radius: 12px; -fx-border-color: white;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0, 2, 2);">
                    <ImageView fx:id="espaceImage" fitHeight="220.0" fitWidth="500.0" preserveRatio="true"
                               style="-fx-border-radius: 10px;">
                        <effect>
                            <DropShadow color="rgba(0,0,0,0.3)" radius="8" offsetX="3" offsetY="3"/>
                        </effect>
                    </ImageView>

                    <Label fx:id="espaceDetailsLabel" text="Chargement..."
                           style="-fx-font-size: 18px; -fx-text-fill: white; -fx-line-spacing: 6px;
                                  -fx-padding: 15px;"/>
                </VBox>

                <!-- 👥 Liste des organisateurs -->
                <VBox prefWidth="250.0" maxWidth="Infinity" style="-fx-background-color: rgba(255, 255, 255, 0.1);
                         -fx-padding: 15px; -fx-border-radius: 12px; -fx-border-color: white;
                         -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
                    <Label text="👥 Organisateurs"
                           style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    <ScrollPane fitToWidth="true" fitToHeight="true"
                                style="-fx-background-color: transparent;">
                        <content>
                            <VBox fx:id="organisateurContainer" spacing="15.0"
                                  style="-fx-padding: 15px; -fx-background-color: transparent;"/>
                        </content>
                    </ScrollPane>
                </VBox>
            </VBox>

            <!-- 🌟 Section QR Code -->
            <VBox prefWidth="200.0" maxWidth="200.0" spacing="10.0" style="-fx-background-color: rgba(255, 255, 255, 0.15);
                     -fx-padding: 20px; -fx-border-radius: 12px; -fx-border-color: white;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0, 2, 2);">
                <Label text="📍 Scannez pour localiser" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <ImageView fx:id="qrCodeImage" fitHeight="200.0" fitWidth="200.0" preserveRatio="true"
                           style="-fx-border-radius: 10px;">
                    <effect>
                        <DropShadow color="rgba(0,0,0,0.3)" radius="8" offsetX="3" offsetY="3"/>
                    </effect>
                </ImageView>
            </VBox>

            <!-- 📍 Section droite : Carte Google Maps seule -->
            <VBox prefWidth="500.0" maxWidth="Infinity" style="-fx-background-color: rgba(255, 255, 255, 0.1);
                     -fx-padding: 15px; -fx-border-radius: 12px; -fx-border-color: white;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
                <Label text="📍 Localisation"
                       style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <WebView fx:id="mapView" prefWidth="480.0" prefHeight="750.0"/>
            </VBox>

        </HBox>


    </children>
</AnchorPane>