<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.FrontDetailEspace"
            prefHeight="900.0" prefWidth="1400.0"
            style="-fx-background-image: url('/images/front-bg.jpg'); -fx-background-size: cover;">

    <children>
        <!-- 🚀 Barre latérale de navigation -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="900.0" prefWidth="230.0"
              style="-fx-background-color: rgba(30,30,46,0.9); -fx-padding: 20px;">
            <children>
                <!-- Logo -->


                <Label text="Détails de l'Espace"
                       style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 15px; -fx-alignment: center;"/>

                <!-- Boutons de navigation -->
                <Button text="🏠 Accueil" onAction="#retourAfficherEspaces"
                        style="-fx-background-color: transparent; -fx-text-fill: #F39C12;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 10px 15px;"/>
                <Button text="➕ Ajouter Organisateur"
                        style="-fx-background-color: transparent; -fx-text-fill: #F39C12;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 10px 15px;"/>
            </children>
        </VBox>

        <!-- 🌟 Titre principal -->
        <Label fx:id="titleLabel" text="Détails de l'Espace"
               layoutX="260.0" layoutY="20.0"
               style="-fx-font-size: 32px; -fx-text-fill: white; -fx-font-weight: bold;">
            <effect>
                <DropShadow color="rgba(0,0,0,0.4)" radius="5" offsetX="3" offsetY="3"/>
            </effect>
        </Label>

        <!-- 📌 Conteneur des détails de l'espace -->
        <VBox layoutX="260.0" layoutY="80.0" prefWidth="520.0" prefHeight="700.0"
              style="-fx-background-color: rgba(255, 255, 255, 0.15);
                     -fx-padding: 20px;
                     -fx-border-radius: 12px;
                     -fx-border-color: white;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0, 2, 2);">
            <children>
                <ImageView fx:id="espaceImage" fitHeight="220.0" fitWidth="500.0" preserveRatio="true"
                           style="-fx-border-radius: 10px;">
                    <effect>
                        <DropShadow color="rgba(0,0,0,0.3)" radius="8" offsetX="3" offsetY="3"/>
                    </effect>
                </ImageView>

                <Label fx:id="espaceDetailsLabel" text="Chargement..."
                       style="-fx-font-size: 18px; -fx-text-fill: white; -fx-line-spacing: 6px;
                              -fx-padding: 15px;"/>
            </children>
        </VBox>

        <!-- 🌍 Carte Google Maps -->
        <VBox layoutX="800.0" layoutY="80.0" prefWidth="560.0" prefHeight="450.0"
              style="-fx-background-color: rgba(255, 255, 255, 0.1);
                     -fx-padding: 15px;
                     -fx-border-radius: 12px;
                     -fx-border-color: white;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
            <Label text="📍 Localisation de l'Espace"
                   style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;
                          -fx-padding: 10px;">
                <effect>
                    <DropShadow color="rgba(0,0,0,0.3)" radius="4" offsetX="2" offsetY="2"/>
                </effect>
            </Label>
            <WebView fx:id="mapView" prefWidth="540.0" prefHeight="380.0"/>
        </VBox>

        <!-- 👥 Liste des organisateurs -->
        <VBox layoutX="800.0" layoutY="550.0" prefWidth="560.0" prefHeight="250.0"
              style="-fx-background-color: rgba(255, 255, 255, 0.1);
                     -fx-padding: 15px;
                     -fx-border-radius: 12px;
                     -fx-border-color: white;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
            <Label text="👥 Organisateurs"
                   style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <ScrollPane fitToWidth="true" fitToHeight="true"
                        style="-fx-background-color: transparent;">
                <content>
                    <VBox fx:id="organisateurContainer" spacing="15.0"
                          style="-fx-padding: 15px; -fx-background-color: transparent;"/>
                </content>
            </ScrollPane>
        </VBox>

        <!-- 🚀 Boutons bas -->
        <HBox spacing="20" layoutY="820.0" layoutX="260.0">
            <children>
                <Button fx:id="retourButton" text="⬅ Retour"
                        onAction="#retourAfficherEspaces"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 18px;
                               -fx-padding: 12px 25px; -fx-border-radius: 8px;"/>
                <Button fx:id="ajouterOrganisateurButton" text="➕ Ajouter Organisateur"

                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px;
                               -fx-font-weight: bold; -fx-border-radius: 8px; -fx-padding: 12px 25px;"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
