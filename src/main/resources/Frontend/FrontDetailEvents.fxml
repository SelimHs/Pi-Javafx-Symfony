<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.FrontDetailEvents"
            prefHeight="900.0" prefWidth="1400.0"
            style="-fx-background-image: url('/images/front-bg.jpg'); -fx-background-size: cover;">

    <children>
        <!-- 🚀 Barre de navigation -->
        <HBox layoutX="0.0" layoutY="0.0" prefHeight="60.0" prefWidth="1400.0"
              style="-fx-background-color: rgba(30,30,46,0.8); -fx-padding: 10px; -fx-alignment: center-left;">
            <children>
                <HBox style="-fx-border-color: #F39C12; -fx-border-width: 2px; -fx-padding: 5px; -fx-border-radius: 10px; -fx-alignment: center;">
                    <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="/logo.png" />
                        </image>
                    </ImageView>
                    <Label text="Lamma" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px;"/>
                </HBox>

                <!-- Menu interactif -->
                <HBox fx:id="navBar" spacing="20.0" style="-fx-alignment: center; -fx-padding: 0 20px;">
                    <Button fx:id="btnAccueil" text="🏠 Accueil" onAction="#goToAcceuil"
                            style="-fx-background-color: transparent; -fx-text-fill: #F39C12; -fx-border-radius: 10px; -fx-padding: 10px 18px;"/>
                    <Button fx:id="btnEvenements" text="📅 Événements" onAction="#goToEvenements"
                            style="-fx-background-color: transparent; -fx-text-fill: #F39C12; -fx-border-radius: 10px; -fx-padding: 10px 18px;"/>
                    <Button fx:id="btnEspace" text="📌 Espaces" onAction="#goToEspace"
                            style="-fx-background-color: transparent; -fx-text-fill: #F39C12; -fx-border-radius: 10px; -fx-padding: 10px 18px;"/>
                </HBox>

                <Button fx:id="btnLogout" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-padding: 0;">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/images/logout.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>

        <!-- 📌 Titre principal -->
        <Label fx:id="titleLabel" text="Détails de l'Événement"
               layoutX="50.0" layoutY="80.0"
               style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <!-- 🌟 Conteneur principal -->
        <HBox layoutX="50.0" layoutY="120.0" spacing="40.0" style="-fx-padding: 20px; -fx-alignment: center-left;">

            <!-- 📌 Section gauche : Détails de l'événement -->
            <VBox prefWidth="500.0" maxWidth="Infinity"
                  style="-fx-background-color: rgba(255, 255, 255, 0.15);
                         -fx-padding: 20px; -fx-border-radius: 12px; -fx-border-color: white;
                         -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0, 2, 2);">
                <ImageView fx:id="eventImage" fitHeight="250.0" fitWidth="450.0" preserveRatio="true"
                           style="-fx-border-radius: 10px;"/>
                <Label fx:id="eventTitleLabel" text="Nom de l'événement"
                       style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px;"/>
                <Label fx:id="eventDateLabel" text="📅 Date : "
                       style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <Label fx:id="eventPriceLabel" text="💰 Prix : "
                       style="-fx-font-size: 18px; -fx-text-fill: #27AE60; -fx-font-weight: bold;"/>
            </VBox>
            <VBox prefWidth="500.0" maxWidth="Infinity"
                  style="-fx-background-color: transparent;
             -fx-padding: 20px;">
                <Label text="📖 Description :"
                       style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: center;"/>
                <Label fx:id="eventDescriptionLabel" text="Event Description"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center;
                  -fx-padding: 10px; -fx-background-color: rgba(0, 0, 0, 0.5); -fx-background-radius: 10px;"
                       wrapText="true" maxWidth="480"/>
            </VBox>



        </HBox>

        <!-- 🚀 Bouton Retour -->
        <HBox spacing="20" layoutY="820.0" layoutX="50.0">
            <children>
                <Button fx:id="retourButton" text="⬅ Retour"
                        onAction="#retourAfficherEvenements"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 18px;
                               -fx-padding: 12px 25px; -fx-border-radius: 8px;"/>
            </children>
        </HBox>
    </children>
</AnchorPane>