<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>

<AnchorPane
        fx:id="root"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controller.GestionFournisseur"
        prefHeight="670.0" prefWidth="950.0"
        style="-fx-background-color: linear-gradient(to bottom, #030307, #131022);">

   <children>
      <!-- 🌟 Barre latérale modernisée -->
      <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="220.0"
            style="-fx-background-color: linear-gradient(to bottom, #131022, #1A172A);
                     -fx-padding: 15px;
                     -fx-border-radius: 15 0 0 15;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0, 3, 3);">
         <children>
            <!-- Logo -->
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png" />
               </image>
            </ImageView>

            <Label text="Gestion des Fournisseurs"
                   style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 10px; -fx-alignment: center;"/>

            <!-- Boutons de navigation -->
            <Button text="🏠 Accueil" onAction="#goToAcceuil"
                    style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                    onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

            <Button text="➕ Ajouter Fournisseur"
                    style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                    onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

            <Button text="📋 Liste des Fournisseurs" onAction="#goToPrincipaleFournisseur"
                    style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                    onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
         </children>
      </VBox>

      <!-- 🌟 Contenu principal -->
      <VBox layoutX="250.0" layoutY="20.0" prefWidth="680.0"
            style="-fx-alignment: center; -fx-padding: 20px;">
         <children>

            <!-- 🔵 Titre avec ombre -->
            <Label text="➕ Ajouter un Fournisseur"
                   style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.8), 10, 0, 2, 2);"/>

            <!-- 📜 Formulaire avec effet de verre -->
            <GridPane hgap="12" vgap="12"
                      style="-fx-background-color: rgba(255, 255, 255, 0.1);
                                 -fx-padding: 20px;
                                 -fx-border-radius: 12px;
                                 -fx-border-color: white;
                                 -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
               <children>
                  <Label text="🏢 Nom Fournisseur :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="nomFournisseur" promptText="Nom du Fournisseur"
                             style="-fx-border-radius: 10px;
                                          -fx-background-radius: 10px;
                                          -fx-padding: 10px;
                                          -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                             GridPane.columnIndex="1" GridPane.rowIndex="0" />

                  <Label text="📝 Description :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextField fx:id="descriptionFournisseur" promptText="Description"
                             style="-fx-border-radius: 10px;
                                          -fx-background-radius: 10px;
                                          -fx-padding: 10px;
                                          -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                             GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label text="🏷 Type :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <TextField fx:id="typeFournisseur" promptText="Type"
                             style="-fx-border-radius: 10px;
                                          -fx-background-radius: 10px;
                                          -fx-padding: 10px;
                                          -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                             GridPane.columnIndex="1" GridPane.rowIndex="2" />

                  <Label text="📞 Téléphone :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <TextField fx:id="telephoneFournisseur" promptText="Numéro de téléphone"
                             style="-fx-border-radius: 10px;
                                          -fx-background-radius: 10px;
                                          -fx-padding: 10px;
                                          -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                             GridPane.columnIndex="1" GridPane.rowIndex="3" />

                  <Label text="ID Fournisseur" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                  <TextField fx:id="idFournisseur" promptText="ID Fournisseur"
                             style="-fx-border-radius: 10px;
                                          -fx-background-radius: 10px;
                                          -fx-padding: 10px;
                                          -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                             GridPane.columnIndex="1" GridPane.rowIndex="4"/>
               </children>
            </GridPane>

            <!-- ✅ Bouton de validation avec effet d'ombre -->
            <Button text="✔ Ajouter le Fournisseur" onAction="#addFournisseur"
                    style="-fx-background-color: #9b59b6;
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-border-radius: 12px;
                               -fx-padding: 10px;
                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"
                    onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
         </children>
      </VBox>
   </children>
</AnchorPane>