<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>

<AnchorPane
        fx:id="root"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controller.GestionFournisseur"
        prefHeight="670.0" prefWidth="950.0"
        style="-fx-background-color: linear-gradient(to bottom, #283593, #5c6bc0);">

   <children>
      <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="200.0"
            style="-fx-background-color: linear-gradient(to bottom, #1a237e, #3949ab); -fx-padding: 15px;">
         <children>
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png" />
               </image>
            </ImageView>
            <Label text="Gestion des Fournisseurs"
                   style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="🏠 Accueil" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="➕ Ajouter Fournisseur" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="📋 Liste des Fournisseurs" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
         </children>
      </VBox>

      <VBox layoutX="220.0" layoutY="20.0" prefWidth="700.0">
         <children>
            <Label text="➕ Ajouter un Fournisseur"
                   style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <GridPane hgap="12" vgap="12" style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-padding: 20px;">
               <children>
                  <Label text="🏢 Nom Fournisseur :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="nomFournisseur" promptText="Nom du Fournisseur" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                  <Label text="📝 Description :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextField fx:id="descriptionFournisseur" promptText="Description" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label text="🏷 Type :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <TextField fx:id="typeFournisseur" promptText="Type" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                  <Label text="🆔 ID Fournisseur :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <TextField fx:id="idFournisseur" promptText="ID (Optionnel)" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>

            <Button text="✔ Ajouter le Fournisseur" onAction="#addFournisseur" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px;"/>
         </children>
      </VBox>
   </children>
</AnchorPane>
