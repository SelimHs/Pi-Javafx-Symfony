<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane fx:id="root" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ModifierFournisseur"
            prefHeight="670.0" prefWidth="950.0"
            style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);">

    <children>
        <!-- Sidebar -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="200.0"
              style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8a2be2);
                     -fx-padding: 15px;
                     -fx-border-radius: 10px;">
            <children>
                <Label style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 10px;" text="Modifier un Fournisseur"/>
            </children>
        </VBox>

        <!-- Formulaire de Modification -->
        <VBox layoutX="220.0" layoutY="20.0" prefWidth="700.0">
            <children>
                <Label text="✏ Modifier le Fournisseur"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 5, 0, 2, 2);"/>

                <GridPane hgap="12" vgap="12"
                          style="-fx-background-color: rgba(255, 255, 255, 0.15);
                                 -fx-padding: 20px;
                                 -fx-border-radius: 12px;
                                 -fx-border-color: white;
                                 -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
                    <children>
                        <Label text="🏢 Nom du Fournisseur :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nomFournisseur" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="📝 Description :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="descriptionFournisseur" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="🏷 Type :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="typeFournisseur" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                </GridPane>

                <!-- ✅ Buttons -->
                <HBox spacing="15" alignment="center">
                    <Button fx:id="btnModifier" text="✔ Modifier" onAction="#modifierFournisseur"
                            style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px;
                                   -fx-border-radius: 10px; -fx-padding: 8px;"/>
                    <Button fx:id="btnRetour" text="⬅ Retour" onAction="#retourAfficherFournisseurs"
                            style="-fx-background-color: #8a2be2; -fx-text-fill: white; -fx-font-size: 14px;
                                   -fx-border-radius: 10px; -fx-padding: 8px;"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
