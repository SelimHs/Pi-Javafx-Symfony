<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom, #a868a0, #34495e);"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ModifierReservation">

    <VBox spacing="20" alignment="CENTER" style="-fx-padding: 30px; -fx-background-radius: 15px;">

        <Label text="Modifier la Réservation"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;
                      -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.3), 10, 0, 2, 2);"/>

        <GridPane hgap="12" vgap="15"
                  style="-fx-background-color: rgba(255, 255, 255, 0.15);
                         -fx-padding: 20px; -fx-border-radius: 12px;
                         -fx-border-color: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">

            <Label text="ID Réservation:" textFill="white" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="idReservationField" promptText="ID Réservation"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

            <Label text="ID Utilisateur:" textFill="white" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="idUserField" promptText="ID Utilisateur"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="ID Événement:" textFill="white" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="idEventField" promptText="ID Événement"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Date de réservation:" textFill="white" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="dateReservationField" promptText="Date de réservation"
                       style="-fx-background-color: rgba(255, 255, 255, 0.3);
                              -fx-border-radius: 10px; -fx-padding: 10px;
                              -fx-border-color: white; -fx-text-fill: white;"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Statut:" textFill="white" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <ComboBox fx:id="statutComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"
                      style="-fx-background-color: rgba(255, 255, 255, 0.3);
                             -fx-border-radius: 10px; -fx-padding: 10px;
                             -fx-border-color: white; -fx-text-fill: white;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Confirmée" />
                        <String fx:value="Annulée" />
                        <String fx:value="En attente" />
                    </FXCollections>
                </items>
            </ComboBox>
        </GridPane>

        <HBox spacing="15">
            <Button fx:id="saveButton" text="💾 Modifier" onAction="#updateReservation"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-border-radius: 12px; -fx-padding: 12px 20px;
                           -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"/>

            <Button fx:id="cancelButton" text="❌ Annuler" onAction="#cancelEdit"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-border-radius: 12px; -fx-padding: 12px 20px;
                           -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"/>
        </HBox>
    </VBox>
</AnchorPane>