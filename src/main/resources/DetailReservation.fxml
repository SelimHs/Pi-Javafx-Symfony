<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DetailReservation"
            prefHeight="900.0" prefWidth="1400.0"
            style="-fx-background-color: linear-gradient(to bottom, #030307, #131022);">

    <children>
        <!-- 🌟 Barre latérale modernisée -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="900.0" prefWidth="250.0"
              style="-fx-background-color: linear-gradient(to bottom, #131022, #1A172A);
                     -fx-padding: 20px;
                     -fx-border-radius: 15 0 0 15;">
            <children>
                <!-- Logo -->
                <ImageView fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <Label text="Détails de la Réservation"
                       style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 15px; -fx-alignment: center;"/>

                <!-- Boutons de navigation -->
                <Button text="🏠 Accueil" onAction="#retourAfficherReservations"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 12px; -fx-padding: 12px 20px;"/>

                <Button text="📄 Voir Toutes les Réservations" onAction="#RetourReservation"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 12px; -fx-padding: 12px 20px;"/>


            </children>
        </VBox>

        <!-- 🌟 Titre -->
        <Label fx:id="titleLabel" text="Détails de la Réservation"
               layoutX="300.0" layoutY="30.0"
               style="-fx-font-size: 36px; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <!-- 🌟 Conteneur principal -->
        <VBox layoutX="300.0" layoutY="100.0" prefWidth="800.0" prefHeight="700.0"
              style="-fx-background-color: rgba(255, 255, 255, 0.1);
                     -fx-padding: 25px;
                     -fx-border-radius: 12px;
                     -fx-border-color: white;">
            <Label text="Informations de la Réservation"
                   style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px;"/>

            <VBox spacing="15">
                <Label fx:id="reservationIdLabel" text="🔖 ID Réservation : Chargement..."
                       style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <Label fx:id="reservationUserLabel" text="👤 Utilisateur : Chargement..."
                       style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <Label fx:id="reservationEventLabel" text="🎉 Événement : Chargement..."
                       style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <Label fx:id="reservationDateLabel" text="📅 Date : Chargement..."
                       style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                <Label fx:id="reservationStatutLabel" text="✅ Statut : Chargement..."
                       style="-fx-font-size: 18px; -fx-text-fill: white;"/>
            </VBox>

            <!-- 🌟 Boutons -->
            <HBox spacing="30" alignment="center">
                <Button fx:id="retourButton" text="⬅ Retour"
                        onAction="#retourAfficherReservations"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 18px;
                               -fx-padding: 12px 25px; -fx-border-radius: 8px;"/>

            </HBox>
        </VBox>
    </children>
</AnchorPane>
