<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.VerifyCode"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox spacing="20.0" alignment="CENTER" style="-fx-padding: 40px;">
            <Label text="Vérification du code de confirmation"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #6A0DAD;"/>
            <Label text="Veuillez entrer le code reçu par e-mail."
                   style="-fx-font-size: 14px; -fx-text-fill: #333;"/>

            <TextField fx:id="codeField" promptText="Code de confirmation"
                       style="-fx-background-color: #F1F1F1; -fx-font-size: 14px; -fx-padding: 12px;
                              -fx-border-radius: 10px; -fx-pref-width: 300px;
                              -fx-border-color: #6A0DAD; -fx-text-fill: #333;"/>

            <!-- CAPTCHA visuel -->
            <ImageView fx:id="captchaImage" fitWidth="200" fitHeight="80" preserveRatio="true"/>
            <TextField fx:id="captchaInput" promptText="Entrez le texte ci-dessus"
                       style="-fx-background-color: #F1F1F1; -fx-font-size: 14px; -fx-padding: 12px;
                              -fx-border-radius: 10px; -fx-pref-width: 300px;
                              -fx-border-color: #6A0DAD; -fx-text-fill: #333;"/>

            <Button text="Vérifier" onAction="#handleVerifyCode"
                    style="-fx-background-color: #6A0DAD; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-font-weight: bold; -fx-border-radius: 10px; -fx-padding: 12px 30px;"/>

            <Label fx:id="messageLabel" style="-fx-font-size: 14px; -fx-text-fill: #FF0000;"/>
        </VBox>
    </center>
</BorderPane>
