<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DetailProduit"
            prefHeight="900.0" prefWidth="1400.0"
            style="-fx-background-color: linear-gradient(to bottom, #030307, #131022);">

    <children>
        <!-- 🌟 Barre latérale modernisée -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="900.0" prefWidth="220.0"
              style="-fx-background-color: linear-gradient(to bottom, #131022, #1A172A);
                     -fx-padding: 15px;
                     -fx-border-radius: 15 0 0 15;">
            <children>
                <!-- Logo -->
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <Label text="Détails du Produit"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 10px; -fx-alignment: center;"/>

                <!-- Boutons de navigation -->
                <Button text="🏠 Accueil" onAction="#retourAccueil"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"/>

                <Button text="🛒 Voir Tous les Produits" onAction="#retourProduits"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"/>
            </children>
        </VBox>

        <!-- 🌟 Titre -->
        <Label fx:id="titleLabel" text="Détails du Produit"
               layoutX="250.0" layoutY="20.0"
               style="-fx-font-size: 36px; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <!-- 🌟 Conteneur des détails du produit -->
        <VBox layoutX="250.0" layoutY="80.0" prefWidth="500.0" prefHeight="700.0"
              style="-fx-background-color: rgba(255, 255, 255, 0.1);
                     -fx-padding: 20px;
                     -fx-border-radius: 12px;
                     -fx-border-color: white;">
            <Label fx:id="produitNomLabel" style="-fx-font-size: 20px; -fx-text-fill: white;"/>
            <Label fx:id="produitPrixLabel" style="-fx-text-fill: white;"/>
            <Label fx:id="produitCategorieLabel" style="-fx-text-fill: white;"/>
            <Label fx:id="produitQuantiteLabel" style="-fx-text-fill: white;"/>
            <Label fx:id="produitDescriptionLabel" wrapText="true"
                   style="-fx-text-fill: white; -fx-padding: 10px;"/>
            <Label fx:id="produitFournisseurLabel" style="-fx-text-fill: white;"/>
            <ImageView fx:id="produitImage" fitHeight="250.0" fitWidth="400.0" preserveRatio="true"/>
        </VBox>

        <!-- 🌟 Boutons en bas -->
        <HBox spacing="20" layoutY="820.0" layoutX="250.0">
            <children>
                <Button fx:id="retourButton" text="⬅ Retour"
                        onAction="#retourProduits"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 18px;
                               -fx-padding: 12px 25px; -fx-border-radius: 8px;"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
