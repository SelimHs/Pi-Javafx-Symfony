<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane
        fx:id="root"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="tn.esprit.controllers.GestionOrganisateur"
        prefHeight="670.0" prefWidth="950.0"
        style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);">

    <children>

        <!-- 📌 Sidebar avec effet d'ombre -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="220.0"
              style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8a2be2);
                     -fx-padding: 15px;
                     -fx-border-radius: 10px;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 3, 3);">
            <children>
                <ImageView fitHeight="80.0" fitWidth="80.0" layoutX="70.0" layoutY="10.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png"/>
                    </image>
                </ImageView>

                <Label text="Gestion des Organisateurs"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 4, 0, 0, 2);"/>

                <Button text="🏠 Accueil"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px;"/>
                <Button text="➕ Ajouter Organisateur"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px;"/>
                <Button text="📋 Liste des Organisateurs"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px;"/>
            </children>
        </VBox>

        <!-- 📌 Main Content -->
        <VBox layoutX="250.0" layoutY="20.0" prefWidth="680.0">
            <children>

                <!-- 🔵 Title avec ombre -->
                <Label text="➕ Ajouter un Organisateur"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 5, 0, 2, 2);"/>

                <!-- 🏠 Form Grid avec effet "verre" -->
                <GridPane hgap="12" vgap="12"
                          style="-fx-background-color: rgba(255, 255, 255, 0.15);
                                 -fx-padding: 20px;
                                 -fx-border-radius: 12px;
                                 -fx-border-color: white;
                                 -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
                    <children>
                        <Label text="👤 Nom :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="nomOrganisateur" promptText="Nom de l'organisateur"
                                   style="-fx-border-radius: 10px; -fx-background-radius: 10px;
                                          -fx-padding: 10px; -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="👤 Prénom :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="prenomOrganisateur" promptText="Prénom de l'organisateur"
                                   style="-fx-border-radius: 10px; -fx-background-radius: 10px;
                                          -fx-padding: 10px; -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="📞 Téléphone :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="telOrganisateur" promptText="Numéro de téléphone"
                                   style="-fx-border-radius: 10px; -fx-background-radius: 10px;
                                          -fx-padding: 10px; -fx-border-color: white;
                                          -fx-background-color: rgba(255, 255, 255, 0.3);"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="📝 Description :" textFill="white"
                               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextArea fx:id="descriptionOrganisateur" promptText="Description"
                                  style="-fx-border-radius: 10px; -fx-background-radius: 10px;
                                         -fx-padding: 10px; -fx-border-color: white;
                                         -fx-background-color: rgba(255, 255, 255, 0.3);"
                                  GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </children>
                </GridPane>

                <!-- ✅ Bouton Ajouter -->
                <Button fx:id="ajouterButton" text="✔ Ajouter l'Organisateur"
                        style="-fx-background-color: #9b59b6;
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-border-radius: 12px;
                               -fx-padding: 10px;
                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 12, 0, 2, 2);"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
