<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane
        fx:id="root"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="tn.esprit.controllers.GestionOrganisateur"
        prefHeight="670.0" prefWidth="950.0"
        style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);">

    <children>

        <!-- 📌 Sidebar -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="220.0"
              style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8a2be2);
                     -fx-padding: 15px;">
            <children>
                <Label text="Gestion des Organisateurs"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>

                <Button fx:id="btnAccueil" text="🏠 Accueil"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>

                <Button fx:id="btnAfficherOrganisateurs" text="📋 Liste des Organisateurs"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
            </children>
        </VBox>

        <!-- 📌 Formulaire -->
        <VBox layoutX="250.0" layoutY="20.0" prefWidth="680.0">
            <children>

                <Label text="➕ Ajouter un Organisateur"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;"/>

                <GridPane hgap="12" vgap="12"
                          style="-fx-background-color: rgba(255, 255, 255, 0.15);
                                 -fx-padding: 20px;">
                    <children>
                        <Label text="👤 Nom :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="nomOrganisateur" promptText="Nom" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="👤 Prénom :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="prenomOrganisateur" promptText="Prénom" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="📞 Téléphone :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="telOrganisateur" promptText="Numéro (8 chiffres)" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="📝 Description :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextArea fx:id="descriptionOrganisateur" promptText="Description" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </children>
                </GridPane>

                <HBox spacing="10">
                    <Button fx:id="btnAjouterOrganisateur" text="✔ Ajouter" onAction="#ajouterOrganisateur"
                            style="-fx-background-color: #9b59b6; -fx-text-fill: white;"/>

                    <Button fx:id="btnRetour" text="⬅ Retour" onAction="#retourAfficherEspaces"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px;"/>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
