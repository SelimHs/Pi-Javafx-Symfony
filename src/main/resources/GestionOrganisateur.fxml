<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane
        fx:id="root"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="tn.esprit.controllers.GestionOrganisateur"
        prefHeight="670.0" prefWidth="950.0"
        style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);">

    <children>

        <!-- 📌 Barre latérale modernisée -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="670.0" prefWidth="220.0"
              style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8a2be2);
                     -fx-padding: 20px;
                     -fx-border-radius: 0 15px 15px 0;">
            <children>
                <Label text="👤 Gestion des Organisateurs"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 10px 0 20px 0;"/>

                <Button fx:id="btnAccueil" text="retour a l'espace" onAction="#retourAfficherEspaces"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-padding: 10px; -fx-border-radius: 8px; -fx-border-color: white;
                               -fx-border-width: 1px;"/>
            </children>
        </VBox>

        <!-- 📌 Contenu Principal -->
        <VBox layoutX="250.0" layoutY="40.0" prefWidth="680.0" spacing="20"
              style="-fx-alignment: center; -fx-padding: 30px;
                     -fx-background-color: rgba(255, 255, 255, 0.15);
                     -fx-border-radius: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
            <children>

                <!-- 🔵 Titre -->
                <Label text="➕ Ajouter un Organisateur"
                       style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;"/>

                <!-- 📋 Formulaire avec effet Glassmorphism -->
                <GridPane hgap="15" vgap="15"
                          style="-fx-background-color: rgba(255, 255, 255, 0.3);
                                 -fx-padding: 20px;
                                 -fx-border-radius: 15px;">
                    <children>
                        <Label text="👤 Nom :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="nomOrganisateur" promptText="Nom"
                                   style="-fx-background-color: rgba(255, 255, 255, 0.5);
                                          -fx-border-radius: 8px;
                                          -fx-padding: 10px;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="👤 Prénom :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="prenomOrganisateur" promptText="Prénom"
                                   style="-fx-background-color: rgba(255, 255, 255, 0.5);
                                          -fx-border-radius: 8px;
                                          -fx-padding: 10px;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="📞 Téléphone :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="telef" promptText="Numéro (8 chiffres)"
                                   style="-fx-background-color: rgba(255, 255, 255, 0.5);
                                          -fx-border-radius: 8px;
                                          -fx-padding: 10px;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="📝 Description :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextArea fx:id="descriptionOrganisateur" promptText="Description"
                                  style="-fx-background-color: rgba(255, 255, 255, 0.5);
                                         -fx-border-radius: 8px;
                                         -fx-padding: 10px;"
                                  GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </children>
                </GridPane>

                <!-- 🟢 Boutons Actions -->
                <HBox spacing="15">
                    <Button fx:id="btnAjouterOrganisateur" text="✔ Ajouter" onAction="#ajouterOrganisateur"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white;
                                   -fx-font-size: 14px; -fx-padding: 12px 20px;
                                   -fx-border-radius: 8px; -fx-font-weight: bold;"/>

                    <Button fx:id="btnRetour" text="⬅ Retour" onAction="#retourAfficherEspaces"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                                   -fx-font-size: 14px; -fx-padding: 12px 20px;
                                   -fx-border-radius: 8px; -fx-font-weight: bold;"/>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
