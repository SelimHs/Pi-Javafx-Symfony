<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #6a0dad, #b19cd9);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ModifierEventController">
    <children>
        <!-- Contenu principal -->
        <VBox layoutX="20.0" layoutY="20.0" prefWidth="550.0" spacing="15.0">
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Modifier un Événement" />

                <GridPane hgap="10" vgap="10">
                    <children>
                        <Label text="Nom de l'événement :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nomEventField" promptText="Nom de l'événement" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Date :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="dateField" promptText="Date de l'événement" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Prix :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="prixField" promptText="Prix en Dt" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Nombre de visiteurs max :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="nbrVisiteursField" promptText="Nombre max de visiteurs" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Espace :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="nomEspaceField" promptText="Lieu de l'événement" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Détails :" textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <TextArea fx:id="detailsField" promptText="Description de l'événement" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    </children>
                </GridPane>

                <Button onAction="#saveEvent" style="-fx-background-color: #9932CC; -fx-text-fill: white; -fx-font-size: 14px;" text="Enregistrer les Modifications" />
            </children>
        </VBox>
    </children>
</AnchorPane>
