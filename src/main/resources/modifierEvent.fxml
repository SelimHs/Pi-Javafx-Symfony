<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom, #a868a0, #34495e);"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ModifierEventController">

    <VBox spacing="20" alignment="CENTER"
          style="-fx-padding: 30px; -fx-background-radius: 15px;">

        <Label text="✏ Modifier un Événement"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

        <GridPane hgap="12" vgap="15"
                  style="-fx-background-color: rgba(255, 255, 255, 0.15);
                         -fx-padding: 20px; -fx-border-radius: 12px;
                         -fx-border-color: white;">

            <Label text="📌 Nom de l'événement :" textFill="white" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nomEventField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="📅 Date :" textFill="white" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="dateField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="💰 Prix :" textFill="white" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="prixField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="👥 Nombre max de visiteurs :" textFill="white" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="nbrVisiteursField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="📍 Lieu :" textFill="white" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="nomEspaceField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="📷 Image :" textFill="white" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <ImageView fx:id="eventImage" fitHeight="150" fitWidth="200" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Button text="📂 Choisir Image" onAction="#choisirImage" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="15">
            <Button fx:id="saveEvent" text="💾 Modifier" onAction="#saveEvent"/>
            <Button fx:id="cancelEvent" text="❌ Annuler" onAction="#retourAfficherEvents"/>
        </HBox>
    </VBox>
</AnchorPane>
