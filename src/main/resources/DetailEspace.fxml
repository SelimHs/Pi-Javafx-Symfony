<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.DetailEspace"
            prefHeight="900.0" prefWidth="1400.0"
            style="-fx-background-color: linear-gradient(to bottom, #030307, #131022);">

    <children>
        <!-- 🌟 Barre latérale modernisée -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="900.0" prefWidth="220.0"
              style="-fx-background-color: linear-gradient(to bottom, #131022, #1A172A);
                     -fx-padding: 15px;
                     -fx-border-radius: 15 0 0 15;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0, 3, 3);">
            <children>
                <!-- Logo -->
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>

                <Label text="Détails de l'Espace"
                       style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;
                              -fx-padding: 10px; -fx-alignment: center;"/>

                <!-- Boutons de navigation -->
                <Button text="🏠 Accueil" onAction="#retourAfficherEspaces"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>

                <Button text="➕ Ajouter Organisateur" onAction="#ajouterOrganisateur"
                        style="-fx-background-color: transparent; -fx-text-fill: #a868a0;
                               -fx-font-size: 16px; -fx-border-radius: 10px; -fx-padding: 12px 20px;"
                        onMouseEntered="#buttonHoverEffect" onMouseExited="#buttonExitEffect"/>
            </children>
        </VBox>

        <!-- 🌟 Titre -->
        <Label fx:id="titleLabel" text="Détails de l'Espace"
               layoutX="250.0" layoutY="20.0"
               style="-fx-font-size: 36px; -fx-text-fill: white; -fx-font-weight: bold;">
            <effect>
                <DropShadow color="rgba(0,0,0,0.3)" radius="5" offsetX="3" offsetY="3"/>
            </effect>
        </Label>

        <!-- 🌟 Conteneur des détails de l'espace et organisateurs -->
        <VBox layoutX="250.0" layoutY="80.0" prefWidth="500.0" prefHeight="700.0"
              style="-fx-background-color: rgba(255, 255, 255, 0.1);
                     -fx-padding: 20px;
                     -fx-border-radius: 12px;
                     -fx-border-color: white;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
            <Label fx:id="espaceDetailsLabel" text="Chargement..."
                   style="-fx-font-size: 20px; -fx-text-fill: white; -fx-line-spacing: 5px;"/>
            <ScrollPane fitToWidth="true" fitToHeight="true"
                        style="-fx-background-color: transparent;">
                <content>
                    <VBox fx:id="organisateurContainer" spacing="15.0"
                          style="-fx-padding: 15px; -fx-background-color: transparent;"/>
                </content>
            </ScrollPane>
        </VBox>

        <!-- 🌟 Conteneur pour la carte agrandie -->
        <VBox layoutX="780.0" layoutY="80.0" prefWidth="850.0" prefHeight="700.0"
              style="-fx-background-color: rgba(255, 255, 255, 0.1);
                     -fx-padding: 20px;
                     -fx-border-radius: 12px;
                     -fx-border-color: white;
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 2, 2);">
            <Label text="Localisation :"
                   style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;">
                <effect>
                    <DropShadow color="rgba(0,0,0,0.3)" radius="3" offsetX="2" offsetY="2"/>
                </effect>
            </Label>
            <WebView fx:id="mapView" prefWidth="830.0" prefHeight="650.0"
                     style="-fx-border-radius: 8px;">
                <effect>
                    <DropShadow color="rgba(0,0,0,0.2)" radius="5" offsetX="2" offsetY="2"/>
                </effect>
            </WebView>
        </VBox>

        <!-- 🌟 Boutons en bas -->
        <HBox spacing="20" layoutY="820.0" layoutX="250.0">
            <children>
                <Button fx:id="retourButton" text="⬅ Retour"
                        onAction="#retourAfficherEspaces"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 18px;
                               -fx-padding: 12px 25px; -fx-border-radius: 8px;">
                    <effect>
                        <DropShadow color="rgba(0,0,0,0.3)" radius="3" offsetX="2" offsetY="2"/>
                    </effect>
                </Button>
                <Button fx:id="ajouterOrganisateurButton" text="➕ Ajouter Organisateur"
                        onAction="#ajouterOrganisateur"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px;
                               -fx-font-weight: bold; -fx-border-radius: 8px; -fx-padding: 12px 25px;">
                    <effect>
                        <DropShadow color="rgba(0,0,0,0.3)" radius="3" offsetX="2" offsetY="2"/>
                    </effect>
                </Button>
            </children>
        </HBox>
    </children>
</AnchorPane>